---
import { Icon } from "astro-icon/components";
import { navConfig } from "../config/nav";
import { companyConfig } from "../config/company";
import { ctaConfig } from "../config/cta";

interface Props {
  companyName?: string;
  companyTagline?: string;
}

const {
  companyName = companyConfig.name,
  companyTagline = companyConfig.tagline,
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer
  class="footer-main border-t"
  style="background-color: var(--color-background-alt); border-color: var(--color-text-lighter);"
>
  <div class="container mx-auto">
    <div class="grid grid-cols-1 gap-8 py-12 md:grid-cols-3 lg:grid-cols-5">
      <!-- Company info -->
      <div class="col-span-1 md:col-span-1 lg:col-span-2">
        <a href="/" class="flex items-center gap-2">
          <img
            src="/bitdoze_logo_better.svg"
            alt="BitDoze"
            class="h-8 w-auto"
          />
        </a>
        <p
          class="mt-4 text-sm max-w-xs"
          style="color: var(--color-text-light);"
        >
          {companyTagline}
        </p>
        <div class="mt-6 flex space-x-4">
          {
            companyConfig.socialMedia.map((social) => (
              <a
                href={social.url}
                class="transition-colors"
                style="color: var(--color-text-lighter); transition: all var(--transition-normal);"
                aria-label={social.platform}
              >
                <Icon name={social.icon} class="h-5 w-5" />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm font-semibold" style="color: var(--color-text);">
          Resurse
        </h3>
        <ul class="mt-4 space-y-3">
          {
            navConfig.footerNav.resources.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm transition-colors"
                  style="color: var(--color-text-light); transition: all var(--transition-normal);"
                >
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold" style="color: var(--color-text);">
          Companie
        </h3>
        <ul class="mt-4 space-y-3">
          {
            navConfig.footerNav.company.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm transition-colors"
                  style="color: var(--color-text-light); transition: all var(--transition-normal);"
                >
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold" style="color: var(--color-text);">
          Legal
        </h3>
        <ul class="mt-4 space-y-3">
          {
            navConfig.footerNav.legal.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm transition-colors"
                  style="color: var(--color-text-light); transition: all var(--transition-normal);"
                >
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom section with copyright -->
    <div
      class="flex flex-col md:flex-row justify-between py-6 border-t"
      style="border-color: var(--color-text-lighter);"
    >
      <p class="text-sm" style="color: var(--color-text-lighter);">
        &copy; {currentYear}
        {companyName}. Toate drepturile rezervate. CUI: 28708326
      </p>
      <div class="mt-4 md:mt-0">
        <a
          href={ctaConfig.primaryAction.href}
          class="btn btn-primary inline-flex h-9 items-center justify-center px-4 py-2 text-sm font-medium text-white shadow"
        >
          {ctaConfig.primaryAction.text}
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-main {
    position: relative;
    z-index: 10;
    width: 100%;
    margin-top: auto;
  }

  .footer-main .container {
    max-width: 80rem;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  /* Ensure footer is always visible */
  .footer-main {
    flex-shrink: 0;
    min-height: auto;
  }

  /* Footer hover effects */
  .footer-main a:hover {
    color: var(--color-primary) !important;
    transform: translateY(-1px);
    transition: all 0.2s ease;
  }

  .footer-main .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--color-primary-rgb), 0.3);
  }

  /* Dark mode adjustments */
  :global(.dark) .footer-main {
    background-color: var(--color-dark-background-alt);
    border-color: rgba(255, 255, 255, 0.1);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .footer-main .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>
