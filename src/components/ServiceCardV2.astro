---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  icon: string;
  link?: string;
  ctaText?: string;
  index?: number;
  badge?: {
    text: string;
    type?: "popular" | "recommended" | "new";
    icon?: string;
  };
  price?: string;
  featured?: boolean;
}

const {
  title,
  description,
  icon,
  link,
  ctaText = "AflÄƒ mai multe",
  index = 0,
  badge,
  price,
  featured = false,
} = Astro.props;

const badgeConfig = {
  popular: {
    icon: "mdi:star",
    gradient: "from-purple-600 to-blue-600",
    shadow: "shadow-purple-500/50",
    bg: "bg-gradient-to-r from-purple-600 to-blue-600",
  },
  recommended: {
    icon: "mdi:thumb-up",
    gradient: "from-orange-500 to-pink-500",
    shadow: "shadow-orange-500/50",
    bg: "bg-gradient-to-r from-orange-500 to-pink-500",
  },
  new: {
    icon: "mdi:sparkles",
    gradient: "from-emerald-500 to-cyan-500",
    shadow: "shadow-emerald-500/50",
    bg: "bg-gradient-to-r from-emerald-500 to-cyan-500",
  },
};

const currentBadge = badge ? badgeConfig[badge.type || "popular"] : null;
---

<div
  class={`service-card-v2 ${featured ? "featured" : ""}`}
  data-index={index}
  style={`--animation-delay: ${index * 0.1}s`}
>
  <!-- Animated gradient border -->
  <div class="gradient-border"></div>

  <!-- Glass morphism background -->
  <div class="glass-bg"></div>

  <!-- Floating particles -->
  <div class="particles">
    <span class="particle"></span>
    <span class="particle"></span>
    <span class="particle"></span>
  </div>

  <!-- Badge -->
  {
    badge && currentBadge && (
      <div class={`badge-wrapper ${badge.type}`}>
        <div
          class={`badge ${currentBadge.bg} ${currentBadge.shadow} shadow-lg`}
        >
          <Icon
            name={currentBadge.icon || badge.icon || "mdi:star"}
            class="badge-icon"
          />
          <span class="badge-text">{badge.text}</span>
        </div>
      </div>
    )
  }

  <!-- Card Content -->
  <div class="card-content">
    <!-- Icon Section -->
    <div class="icon-section">
      <div class="icon-container">
        <div class="icon-inner">
          <Icon name={icon} class="service-icon" />
        </div>
        <div class="icon-bg-effect"></div>
      </div>
    </div>

    <!-- Text Content -->
    <div class="text-content">
      <h3 class="service-title">{title}</h3>
      <p class="service-description">{description}</p>
    </div>

    <!-- Price Tag -->
    {
      price && (
        <div class="price-section">
          <div class="price-tag">
            <span class="price-amount">{price}</span>
          </div>
        </div>
      )
    }

    <!-- CTA Section -->
    <div class="cta-section">
      {
        link ? (
          <a href={link} class="cta-button group">
            <span class="cta-text">{ctaText}</span>
            <div class="cta-icon-wrapper">
              <Icon name="mdi:arrow-right" class="cta-icon" />
              <Icon name="mdi:arrow-right" class="cta-icon-hover" />
            </div>
          </a>
        ) : (
          <div class="cta-button">
            <span class="cta-text">{ctaText}</span>
            <div class="cta-icon-wrapper">
              <Icon name="mdi:arrow-right" class="cta-icon" />
            </div>
          </div>
        )
      }
    </div>
  </div>

  <!-- Hover spotlight effect -->
  <div class="spotlight"></div>
</div>

<style>
  .service-card-v2 {
    position: relative;
    height: 100%;
    min-height: 420px;
    border-radius: 24px;
    background: white;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.8s ease-out var(--animation-delay) both;
    cursor: pointer;
  }

  :global(.dark) .service-card-v2 {
    background: rgba(30, 30, 40, 0.8);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Gradient border effect */
  .gradient-border {
    position: absolute;
    inset: 0;
    border-radius: 24px;
    padding: 2px;
    background: linear-gradient(
      135deg,
      rgba(124, 58, 237, 0.2),
      rgba(239, 68, 68, 0.2),
      rgba(34, 197, 94, 0.2),
      rgba(124, 58, 237, 0.2)
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: exclude;
    mask-composite: exclude;
    opacity: 0.6;
    transition: all 0.5s ease;
  }

  .service-card-v2:hover .gradient-border {
    opacity: 1;
    background: linear-gradient(
      135deg,
      rgba(124, 58, 237, 0.6),
      rgba(239, 68, 68, 0.6),
      rgba(34, 197, 94, 0.6),
      rgba(124, 58, 237, 0.6)
    );
    animation: gradientRotate 3s linear infinite;
  }

  @keyframes gradientRotate {
    0% {
      filter: hue-rotate(0deg);
    }
    100% {
      filter: hue-rotate(360deg);
    }
  }

  /* Glass background */
  .glass-bg {
    position: absolute;
    inset: 2px;
    border-radius: 22px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    transition: all 0.5s ease;
  }

  :global(.dark) .glass-bg {
    background: rgba(20, 20, 30, 0.95);
  }

  .service-card-v2:hover .glass-bg {
    background: rgba(255, 255, 255, 0.98);
  }

  :global(.dark) .service-card-v2:hover .glass-bg {
    background: rgba(25, 25, 35, 0.98);
  }

  /* Floating particles */
  .particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .service-card-v2:hover .particles {
    opacity: 1;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: linear-gradient(135deg, #7c3aed, #ef4444);
    border-radius: 50%;
    animation: floatParticle 6s ease-in-out infinite;
  }

  .particle:nth-child(1) {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .particle:nth-child(2) {
    top: 60%;
    right: 15%;
    animation-delay: 2s;
  }

  .particle:nth-child(3) {
    bottom: 20%;
    left: 20%;
    animation-delay: 4s;
  }

  @keyframes floatParticle {
    0%,
    100% {
      transform: translateY(0) translateX(0);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    50% {
      transform: translateY(-20px) translateX(20px);
    }
  }

  /* Badge styling */
  .badge-wrapper {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 10;
    animation: badgePulse 2s ease-in-out infinite;
  }

  @keyframes badgePulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 700;
    color: white;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .badge-icon {
    width: 16px;
    height: 16px;
  }

  .service-card-v2:hover .badge-wrapper {
    animation: none;
    transform: scale(1.1) rotate(-5deg);
    transition: transform 0.3s ease;
  }

  /* Content */
  .card-content {
    position: relative;
    padding: 32px;
    height: 100%;
    display: flex;
    flex-direction: column;
    z-index: 2;
  }

  /* Icon Section */
  .icon-section {
    margin-bottom: 24px;
  }

  .icon-container {
    position: relative;
    width: 72px;
    height: 72px;
  }

  .icon-inner {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      rgba(124, 58, 237, 0.1),
      rgba(239, 68, 68, 0.1)
    );
    border-radius: 20px;
    border: 2px solid transparent;
    background-clip: padding-box;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .service-icon {
    width: 36px;
    height: 36px;
    color: #7c3aed;
    transition: all 0.5s ease;
    z-index: 2;
  }

  .icon-bg-effect {
    position: absolute;
    inset: -4px;
    background: linear-gradient(135deg, #7c3aed, #ef4444, #22c55e);
    border-radius: 24px;
    opacity: 0;
    filter: blur(8px);
    transition: all 0.5s ease;
  }

  .service-card-v2:hover .icon-inner {
    transform: scale(1.1) rotate(10deg);
    background: linear-gradient(
      135deg,
      rgba(124, 58, 237, 0.2),
      rgba(239, 68, 68, 0.2)
    );
    border-color: rgba(124, 58, 237, 0.3);
  }

  .service-card-v2:hover .service-icon {
    transform: scale(1.1);
    color: #6d28d9;
  }

  .service-card-v2:hover .icon-bg-effect {
    opacity: 0.3;
  }

  /* Text Content */
  .text-content {
    flex: 1;
    margin-bottom: 24px;
  }

  .service-title {
    font-size: 24px;
    font-weight: 800;
    color: #1f2937;
    margin-bottom: 12px;
    line-height: 1.3;
    transition: all 0.3s ease;
  }

  :global(.dark) .service-title {
    color: #f3f4f6;
  }

  .service-card-v2:hover .service-title {
    background: linear-gradient(135deg, #7c3aed, #ef4444);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .service-description {
    font-size: 15px;
    line-height: 1.7;
    color: #6b7280;
  }

  :global(.dark) .service-description {
    color: #9ca3af;
  }

  /* Price Section */
  .price-section {
    margin-bottom: 24px;
  }

  .price-tag {
    display: inline-flex;
    align-items: baseline;
    gap: 8px;
    padding: 12px 20px;
    background: linear-gradient(
      135deg,
      rgba(34, 197, 94, 0.1),
      rgba(16, 185, 129, 0.1)
    );
    border: 2px solid rgba(34, 197, 94, 0.2);
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .price-label {
    font-size: 14px;
    color: #6b7280;
    font-weight: 500;
  }

  .price-amount {
    font-size: 20px;
    font-weight: 800;
    background: linear-gradient(135deg, #22c55e, #10b981);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .service-card-v2:hover .price-tag {
    transform: scale(1.05);
    background: linear-gradient(
      135deg,
      rgba(34, 197, 94, 0.15),
      rgba(16, 185, 129, 0.15)
    );
    border-color: rgba(34, 197, 94, 0.4);
  }

  /* CTA Section */
  .cta-section {
    margin-top: auto;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 14px 24px;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-primary-dark)
    );
    color: white;
    font-weight: 600;
    font-size: 15px;
    border-radius: 14px;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(var(--color-primary-rgb), 0.3);
  }

  .cta-button::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s;
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(var(--color-primary-rgb), 0.4);
  }

  .cta-icon-wrapper {
    position: relative;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cta-icon {
    width: 20px;
    height: 20px;
    transition: all 0.3s ease;
  }

  .cta-icon-hover {
    position: absolute;
    width: 20px;
    height: 20px;
    opacity: 0;
    transform: translateX(-20px);
    transition: all 0.3s ease;
  }

  .cta-button:hover .cta-icon {
    opacity: 0;
    transform: translateX(20px);
  }

  .cta-button:hover .cta-icon-hover {
    opacity: 1;
    transform: translateX(0);
  }

  /* Spotlight effect */
  .spotlight {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle at center,
      rgba(124, 58, 237, 0.1) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .service-card-v2:hover .spotlight {
    opacity: 1;
  }

  /* Featured card special effects */
  .service-card-v2.featured {
    transform: scale(1.05);
  }

  .service-card-v2.featured .gradient-border {
    opacity: 0.8;
  }

  .service-card-v2.featured:hover {
    transform: scale(1.08) translateY(-5px);
  }

  /* Hover lift effect */
  .service-card-v2:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1), 0 0 60px rgba(124, 58, 237, 0.1);
  }

  :global(.dark) .service-card-v2:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 0 0 60px rgba(124, 58, 237, 0.2);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .service-card-v2 {
      min-height: 360px;
    }

    .card-content {
      padding: 24px;
    }

    .icon-container {
      width: 60px;
      height: 60px;
    }

    .service-icon {
      width: 30px;
      height: 30px;
    }

    .service-title {
      font-size: 20px;
    }

    .service-description {
      font-size: 14px;
    }
  }
</style>
