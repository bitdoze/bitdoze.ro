<svg width="100%" height="100%" viewBox="0 0 500 400" xmlns="http://www.w3.org/2000/svg" class="consultanta-ai-illustration">
  <!-- Background and decorative elements -->
  <defs>
    <linearGradient id="ai-bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--color-primary)" stop-opacity="0.05" />
      <stop offset="100%" stop-color="var(--color-secondary)" stop-opacity="0.05" />
    </linearGradient>
    
    <filter id="ai-shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="4" stdDeviation="6" flood-opacity="0.2" />
    </filter>
    
    <pattern id="brain-grid" width="20" height="20" patternUnits="userSpaceOnUse">
      <path d="M 20 0 L 0 0 0 20" fill="none" stroke="var(--color-primary)" stroke-opacity="0.1" stroke-width="0.5" />
    </pattern>
    
    <radialGradient id="brain-glow" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
      <stop offset="0%" stop-color="var(--color-primary)" stop-opacity="0.3" />
      <stop offset="100%" stop-color="var(--color-primary)" stop-opacity="0" />
    </radialGradient>
  </defs>
  
  <!-- Background for the illustration -->
  <rect width="500" height="400" rx="16" fill="url(#ai-bg-gradient)" class="bg" />
  <rect width="500" height="400" rx="16" fill="url(#brain-grid)" class="grid" />
  
  <!-- Abstract decorative shapes -->
  <circle cx="70" cy="60" r="30" fill="var(--color-primary)" fill-opacity="0.1" class="shape shape-1" />
  <circle cx="430" cy="340" r="40" fill="var(--color-secondary)" fill-opacity="0.1" class="shape shape-2" />
  <path d="M380,80 Q420,40 460,80 T540,80" stroke="var(--color-accent)" stroke-width="2" fill="none" class="shape shape-3" />
  
  <!-- Central Brain with Neural Network -->
  <g class="brain" transform="translate(250, 200)" filter="url(#ai-shadow)">
    <!-- Brain Outline -->
    <path d="M-60,-40 
             C-80,-30 -90,-10 -80,10 
             C-90,30 -70,50 -50,45
             C-40,60 -20,65 0,50
             C20,65 40,60 50,45
             C70,50 90,30 80,10
             C90,-10 80,-30 60,-40
             C40,-60 20,-50 0,-40
             C-20,-50 -40,-60 -60,-40Z" 
          fill="var(--color-background)" 
          stroke="var(--color-primary)" 
          stroke-width="2"
          class="brain-outline" />
    
    <!-- Brain Lobes -->
    <path d="M-50,-35 C-60,-25 -60,-10 -50,0" 
          fill="none" 
          stroke="var(--color-primary)" 
          stroke-width="1.5"
          stroke-opacity="0.5"
          class="brain-lobe lobe-1" />
    <path d="M-40,-30 C-50,-15 -45,0 -35,10" 
          fill="none" 
          stroke="var(--color-primary)" 
          stroke-width="1.5"
          stroke-opacity="0.5"
          class="brain-lobe lobe-2" />
    <path d="M-25,-35 C-30,-20 -30,-5 -20,10" 
          fill="none" 
          stroke="var(--color-primary)" 
          stroke-width="1.5"
          stroke-opacity="0.5"
          class="brain-lobe lobe-3" />
    <path d="M0,-35 C0,-20 0,-5 0,10" 
          fill="none" 
          stroke="var(--color-primary)" 
          stroke-width="1.5"
          stroke-opacity="0.5"
          class="brain-lobe lobe-4" />
    <path d="M25,-35 C30,-20 30,-5 20,10" 
          fill="none" 
          stroke="var(--color-primary)" 
          stroke-width="1.5"
          stroke-opacity="0.5"
          class="brain-lobe lobe-5" />
    <path d="M40,-30 C50,-15 45,0 35,10" 
          fill="none" 
          stroke="var(--color-primary)" 
          stroke-width="1.5"
          stroke-opacity="0.5"
          class="brain-lobe lobe-6" />
    <path d="M50,-35 C60,-25 60,-10 50,0" 
          fill="none" 
          stroke="var(--color-primary)" 
          stroke-width="1.5"
          stroke-opacity="0.5"
          class="brain-lobe lobe-7" />
    
    <!-- Neural Network Nodes -->
    <g class="nodes-layer-1">
      <circle cx="-40" cy="-10" r="5" fill="var(--color-accent)" class="node node-1" />
      <circle cx="-20" cy="-25" r="5" fill="var(--color-accent)" class="node node-2" />
      <circle cx="0" cy="-15" r="5" fill="var(--color-accent)" class="node node-3" />
      <circle cx="20" cy="-25" r="5" fill="var(--color-accent)" class="node node-4" />
      <circle cx="40" cy="-10" r="5" fill="var(--color-accent)" class="node node-5" />
    </g>
    
    <g class="nodes-layer-2">
      <circle cx="-25" cy="10" r="5" fill="var(--color-secondary)" class="node node-6" />
      <circle cx="0" cy="20" r="5" fill="var(--color-secondary)" class="node node-7" />
      <circle cx="25" cy="10" r="5" fill="var(--color-secondary)" class="node node-8" />
    </g>
    
    <g class="nodes-layer-3">
      <circle cx="0" cy="40" r="5" fill="var(--color-primary)" class="node node-9" />
    </g>
    
    <!-- Neural Connections -->
    <g class="connections">
      <!-- Layer 1 to Layer 2 -->
      <line x1="-40" y1="-10" x2="-25" y2="10" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-1-6" />
      <line x1="-40" y1="-10" x2="0" y2="20" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-1-7" />
      
      <line x1="-20" y1="-25" x2="-25" y2="10" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-2-6" />
      <line x1="-20" y1="-25" x2="0" y2="20" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-2-7" />
      
      <line x1="0" y1="-15" x2="-25" y2="10" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-3-6" />
      <line x1="0" y1="-15" x2="0" y2="20" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-3-7" />
      <line x1="0" y1="-15" x2="25" y2="10" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-3-8" />
      
      <line x1="20" y1="-25" x2="0" y2="20" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-4-7" />
      <line x1="20" y1="-25" x2="25" y2="10" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-4-8" />
      
      <line x1="40" y1="-10" x2="0" y2="20" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-5-7" />
      <line x1="40" y1="-10" x2="25" y2="10" stroke="var(--color-accent)" stroke-width="1" stroke-opacity="0.5" class="connection conn-5-8" />
      
      <!-- Layer 2 to Layer 3 -->
      <line x1="-25" y1="10" x2="0" y2="40" stroke="var(--color-secondary)" stroke-width="1" stroke-opacity="0.7" class="connection conn-6-9" />
      <line x1="0" y1="20" x2="0" y2="40" stroke="var(--color-secondary)" stroke-width="1" stroke-opacity="0.7" class="connection conn-7-9" />
      <line x1="25" y1="10" x2="0" y2="40" stroke="var(--color-secondary)" stroke-width="1" stroke-opacity="0.7" class="connection conn-8-9" />
    </g>
    
    <!-- Data Flow Animation -->
    <g class="data-flow">
      <circle cx="-30" cy="-18" r="2" fill="white" class="data-pulse pulse-1" />
      <circle cx="20" cy="-20" r="2" fill="white" class="data-pulse pulse-2" />
      <circle cx="-10" cy="15" r="2" fill="white" class="data-pulse pulse-3" />
      <circle cx="15" cy="15" r="2" fill="white" class="data-pulse pulse-4" />
      <circle cx="0" cy="30" r="2" fill="white" class="data-pulse pulse-5" />
    </g>
    
    <!-- Brain Glow Effect -->
    <circle cx="0" cy="0" r="90" fill="url(#brain-glow)" class="brain-glow" />
  </g>
  
  <!-- Data Streams -->
  <g class="data-streams" transform="translate(250, 50)">
    <rect x="-120" y="0" width="240" height="30" rx="4" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.2" class="data-container" />
    
    <!-- Data Symbols -->
    <text x="-110" y="20" font-family="monospace" font-size="12" fill="var(--color-primary)" fill-opacity="0.7" class="data-text">01001010</text>
    <text x="-50" y="20" font-family="monospace" font-size="12" fill="var(--color-secondary)" fill-opacity="0.7" class="data-text">10110101</text>
    <text x="10" y="20" font-family="monospace" font-size="12" fill="var(--color-accent)" fill-opacity="0.7" class="data-text">01101001</text>
    <text x="70" y="20" font-family="monospace" font-size="12" fill="var(--color-primary)" fill-opacity="0.7" class="data-text">10010110</text>
  </g>
  
  <!-- AI Terms/Labels -->
  <g class="ai-labels">
    <g transform="translate(100, 330)" class="label label-1">
      <rect x="-50" y="-15" width="100" height="30" rx="15" fill="var(--color-background)" stroke="var(--color-primary)" stroke-width="1.5" class="label-bg" />
      <text x="0" y="5" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-primary)" class="label-text">Machine Learning</text>
    </g>
    
    <g transform="translate(250, 350)" class="label label-2">
      <rect x="-40" y="-15" width="80" height="30" rx="15" fill="var(--color-background)" stroke="var(--color-secondary)" stroke-width="1.5" class="label-bg" />
      <text x="0" y="5" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-secondary)" class="label-text">Deep Learning</text>
    </g>
    
    <g transform="translate(380, 330)" class="label label-3">
      <rect x="-30" y="-15" width="60" height="30" rx="15" fill="var(--color-background)" stroke="var(--color-accent)" stroke-width="1.5" class="label-bg" />
      <text x="0" y="5" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-accent)" class="label-text">NLP</text>
    </g>
  </g>
  
  <!-- Analytics Icon -->
  <g class="analytics" transform="translate(400, 120)">
    <rect x="-25" y="-25" width="50" height="50" rx="8" fill="var(--color-background)" stroke="var(--color-primary)" stroke-width="1.5" class="analytics-bg" />
    <rect x="-15" y="5" width="10" height="15" rx="2" fill="var(--color-primary)" fill-opacity="0.7" class="bar bar-1" />
    <rect x="-2" y="-5" width="10" height="25" rx="2" fill="var(--color-secondary)" fill-opacity="0.7" class="bar bar-2" />
    <rect x="11" y="-15" width="10" height="35" rx="2" fill="var(--color-accent)" fill-opacity="0.7" class="bar bar-3" />
  </g>
</svg>

<style>
  .consultanta-ai-illustration {
    width: 100%;
    height: auto;
    overflow: visible;
  }
  
  .bg, .grid {
    opacity: 0.7;
  }
  
  /* Animations for decorative elements */
  .shape {
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }
  
  .shape-1 {
    animation-delay: 0.1s;
    transform-origin: center;
    animation: fadeIn 0.8s ease forwards, float 6s ease-in-out infinite;
  }
  
  .shape-2 {
    animation-delay: 0.2s;
    animation: fadeIn 0.8s ease forwards, float 8s ease-in-out infinite reverse;
  }
  
  .shape-3 {
    animation-delay: 0.3s;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 2s ease forwards;
  }
  
  /* Brain animations */
  .brain {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpFadeIn 1s ease forwards 0.4s;
  }
  
  .brain-outline {
    opacity: 0;
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: dashDraw 2s ease forwards 0.6s, pulseBrain 3s ease-in-out infinite 3s;
    transform-origin: center center;
  }
  
  .brain-lobe {
    opacity: 0;
    stroke-dasharray: 100;
    stroke-dashoffset: 100;
    animation: dashDraw 1s ease forwards;
  }
  
  .lobe-1 { animation-delay: 0.7s; }
  .lobe-2 { animation-delay: 0.8s; }
  .lobe-3 { animation-delay: 0.9s; }
  .lobe-4 { animation-delay: 1.0s; }
  .lobe-5 { animation-delay: 1.1s; }
  .lobe-6 { animation-delay: 1.2s; }
  .lobe-7 { animation-delay: 1.3s; }
  
  /* Neural network animations */
  .node {
    opacity: 0;
    transform: scale(0);
    animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
  
  .nodes-layer-1 .node:nth-child(1) { animation-delay: 1.4s; }
  .nodes-layer-1 .node:nth-child(2) { animation-delay: 1.5s; }
  .nodes-layer-1 .node:nth-child(3) { animation-delay: 1.6s; }
  .nodes-layer-1 .node:nth-child(4) { animation-delay: 1.7s; }
  .nodes-layer-1 .node:nth-child(5) { animation-delay: 1.8s; }
  
  .nodes-layer-2 .node:nth-child(1) { animation-delay: 1.9s; }
  .nodes-layer-2 .node:nth-child(2) { animation-delay: 2.0s; }
  .nodes-layer-2 .node:nth-child(3) { animation-delay: 2.1s; }
  
  .nodes-layer-3 .node { animation-delay: 2.2s; }
  
  .connection {
    opacity: 0;
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: dashDraw 0.7s ease forwards;
  }
  
  /* Layer 1 to 2 connections */
  .conn-1-6 { animation-delay: 2.3s; }
  .conn-1-7 { animation-delay: 2.32s; }
  .conn-2-6 { animation-delay: 2.34s; }
  .conn-2-7 { animation-delay: 2.36s; }
  .conn-3-6 { animation-delay: 2.38s; }
  .conn-3-7 { animation-delay: 2.4s; }
  .conn-3-8 { animation-delay: 2.42s; }
  .conn-4-7 { animation-delay: 2.44s; }
  .conn-4-8 { animation-delay: 2.46s; }
  .conn-5-7 { animation-delay: 2.48s; }
  .conn-5-8 { animation-delay: 2.5s; }
  
  /* Layer 2 to 3 connections */
  .conn-6-9 { animation-delay: 2.6s; }
  .conn-7-9 { animation-delay: 2.65s; }
  .conn-8-9 { animation-delay: 2.7s; }
  
  /* Data pulse animations */
  .data-pulse {
    opacity: 0;
    animation: movePulse 3s infinite linear;
  }
  
  .pulse-1 { animation-delay: 3.0s; }
  .pulse-2 { animation-delay: 3.5s; }
  .pulse-3 { animation-delay: 4.0s; }
  .pulse-4 { animation-delay: 4.5s; }
  .pulse-5 { animation-delay: 5.0s; }
  
  .brain-glow {
    opacity: 0;
    animation: fadeIn 2s ease forwards 2.8s, pulsateGlow 4s ease-in-out infinite 3s;
  }
  
  /* Data streams animations */
  .data-container {
    opacity: 0;
    transform: translateY(-10px);
    animation: slideDownFadeIn 0.8s ease forwards 3.0s;
  }
  
  .data-text {
    opacity: 0;
    animation: blink 2s infinite;
  }
  
  .data-text:nth-of-type(1) { animation-delay: 3.2s; }
  .data-text:nth-of-type(2) { animation-delay: 3.3s; }
  .data-text:nth-of-type(3) { animation-delay: 3.4s; }
  .data-text:nth-of-type(4) { animation-delay: 3.5s; }
  
  /* Analytics animations */
  .analytics-bg {
    opacity: 0;
    transform: translateY(10px);
    animation: slideUpFadeIn 0.6s ease forwards 3.6s;
  }
  
  .bar {
    opacity: 0;
    transform-origin: bottom center;
    transform: scaleY(0);
    animation: growBar 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
  
  .bar-1 { animation-delay: 3.8s; }
  .bar-2 { animation-delay: 3.9s; }
  .bar-3 { animation-delay: 4.0s; }
  
  /* AI Labels animations */
  .label {
    opacity: 0;
    transform: translateY(10px);
    animation: slideUpFadeIn 0.5s ease forwards;
  }
  
  .label-1 { animation-delay: 4.1s; }
  .label-2 { animation-delay: 4.2s; }
  .label-3 { animation-delay: 4.3s; }
  
  /* Animation Keyframes */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUpFadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes slideDownFadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes popIn {
    from { opacity: 0; transform: scale(0); }
    to { opacity: 1; transform: scale(1); }
  }
  
  @keyframes dashDraw {
    to { stroke-dashoffset: 0; }
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  @keyframes pulseBrain {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
  }
  
  @keyframes pulsateGlow {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.4; }
  }
  
  @keyframes movePulse {
    0% { opacity: 0; transform: translate(0, 0); }
    20% { opacity: 1; }
    80% { opacity: 1; }
    100% { opacity: 0; transform: translate(0, 25px); }
  }
  
  @keyframes blink {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }
  
  @keyframes growBar {
    from { opacity: 0; transform: scaleY(0); }
    to { opacity: 1; transform: scaleY(1); }
  }
  
  /* Dark mode adjustments */
  :global(.dark) .consultanta-ai-illustration {
    --shadow-color: rgba(0, 0, 0, 0.5);
  }
</style>