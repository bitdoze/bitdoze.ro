<div class="svg-container">
<svg width="100%" height="100%" viewBox="0 0 500 400" xmlns="http://www.w3.org/2000/svg" class="marketing-illustration">
  <!-- Background and decorative elements -->
  <defs>
    <linearGradient id="marketing-bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--color-primary)" stop-opacity="0.05" />
      <stop offset="100%" stop-color="var(--color-secondary)" stop-opacity="0.05" />
    </linearGradient>
    
    <filter id="marketing-shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="4" stdDeviation="6" flood-opacity="0.2" />
    </filter>
    
    <pattern id="grid-dots" width="20" height="20" patternUnits="userSpaceOnUse">
      <circle cx="10" cy="10" r="1" fill="var(--color-text)" fill-opacity="0.1" />
    </pattern>
    
    <linearGradient id="bar-gradient" x1="0%" y1="100%" x2="0%" y2="0%">
      <stop offset="0%" stop-color="var(--color-primary)" stop-opacity="0.6" />
      <stop offset="100%" stop-color="var(--color-accent)" stop-opacity="0.6" />
    </linearGradient>
  </defs>
  
  <!-- Background for the illustration -->
  <rect width="500" height="400" rx="16" fill="url(#marketing-bg-gradient)" class="bg" />
  <rect width="500" height="400" rx="16" fill="url(#grid-dots)" class="pattern" />
  
  <!-- Abstract decorative shapes -->
  <circle cx="70" cy="60" r="30" fill="var(--color-primary)" fill-opacity="0.1" class="shape shape-1" />
  <circle cx="430" cy="340" r="40" fill="var(--color-secondary)" fill-opacity="0.1" class="shape shape-2" />
  <path d="M380,80 Q420,40 460,80 T540,80" stroke="var(--color-accent)" stroke-width="2" fill="none" class="shape shape-3" />
  
  <!-- Main Marketing Elements Group -->
  <g class="marketing-elements" transform="translate(250, 200)" filter="url(#marketing-shadow)">
    <!-- Funnel Diagram -->
    <g class="funnel">
      <path d="M-80,-60 L80,-60 L50,60 L-50,60 Z" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.3" class="funnel-outline" />
      
      <!-- Funnel Sections -->
      <rect x="-80" y="-60" width="160" height="30" fill="var(--color-primary)" fill-opacity="0.2" class="funnel-section section-1" />
      <text x="0" y="-40" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-text)" class="funnel-text">AWARENESS</text>
      
      <path d="M-80,-30 L80,-30 L70,0 L-70,0 Z" fill="var(--color-secondary)" fill-opacity="0.2" class="funnel-section section-2" />
      <text x="0" y="-10" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-text)" class="funnel-text">INTEREST</text>
      
      <path d="M-70,0 L70,0 L60,30 L-60,30 Z" fill="var(--color-accent)" fill-opacity="0.2" class="funnel-section section-3" />
      <text x="0" y="20" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-text)" class="funnel-text">DECISION</text>
      
      <path d="M-60,30 L60,30 L50,60 L-50,60 Z" fill="var(--color-primary)" fill-opacity="0.3" class="funnel-section section-4" />
      <text x="0" y="50" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-text)" class="funnel-text">ACTION</text>
    </g>
    
    <!-- Marketing Channels Icons -->
    <g class="channels" transform="translate(-120, -30)">
      <!-- Social Media Icon -->
      <g class="channel channel-1">
        <circle cx="0" cy="0" r="20" fill="var(--color-background)" stroke="var(--color-primary)" stroke-width="1.5" class="channel-bg" />
        <path d="M-5,-5 C-5,-8 -3,-10 0,-10 C3,-10 5,-8 5,-5 C5,-3 4,-1 2,0 L2,5 M2,8 L2,8" stroke="var(--color-primary)" stroke-width="2" fill="none" class="channel-icon" />
      </g>
      
      <!-- Email Icon -->
      <g class="channel channel-2" transform="translate(0, 50)">
        <circle cx="0" cy="0" r="20" fill="var(--color-background)" stroke="var(--color-secondary)" stroke-width="1.5" class="channel-bg" />
        <path d="M-10,-5 L10,-5 L10,5 L-10,5 Z M-10,-5 L0,0 L10,-5" stroke="var(--color-secondary)" stroke-width="2" fill="none" class="channel-icon" />
      </g>
      
      <!-- Web/SEO Icon -->
      <g class="channel channel-3" transform="translate(0, 100)">
        <circle cx="0" cy="0" r="20" fill="var(--color-background)" stroke="var(--color-accent)" stroke-width="1.5" class="channel-bg" />
        <path d="M-10,0 C-10,-8 10,-8 10,0 C10,8 -10,8 -10,0 M-10,0 L10,0 M0,-8 L0,8" stroke="var(--color-accent)" stroke-width="2" fill="none" class="channel-icon" />
      </g>
    </g>
    
    <!-- Marketing ROI/Analytics -->
    <g class="analytics" transform="translate(120, 0)">
      <!-- Chart Background -->
      <rect x="-50" y="-50" width="100" height="100" rx="5" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.3" class="chart-bg" />
      
      <!-- Chart Axes -->
      <line x1="-40" y1="40" x2="40" y2="40" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.5" class="chart-axis" />
      <line x1="-40" y1="40" x2="-40" y2="-40" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.5" class="chart-axis" />
      
      <!-- Chart Bars -->
      <rect x="-30" y="10" width="10" height="30" rx="2" fill="url(#bar-gradient)" class="chart-bar bar-1" />
      <rect x="-10" y="-10" width="10" height="50" rx="2" fill="url(#bar-gradient)" class="chart-bar bar-2" />
      <rect x="10" y="-30" width="10" height="70" rx="2" fill="url(#bar-gradient)" class="chart-bar bar-3" />
      <rect x="30" y="-40" width="10" height="80" rx="2" fill="url(#bar-gradient)" class="chart-bar bar-4" />
      
      <!-- ROI Label -->
      <text x="0" y="-40" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-text)" class="chart-label">ROI</text>
    </g>
  </g>
  
  <!-- Marketing Channels Text -->
  <g class="marketing-text" transform="translate(250, 340)">
    <rect x="-150" y="-20" width="300" height="40" rx="20" fill="var(--color-background)" stroke="var(--color-primary)" stroke-width="2" class="text-container" />
    <text x="-130" y="5" font-family="sans-serif" font-size="10" fill="var(--color-primary)" class="channel-text">SOCIAL</text>
    <text x="-70" y="5" font-family="sans-serif" font-size="10" fill="var(--color-secondary)" class="channel-text">SEO</text>
    <text x="-30" y="5" font-family="sans-serif" font-size="10" fill="var(--color-accent)" class="channel-text">EMAIL</text>
    <text x="20" y="5" font-family="sans-serif" font-size="10" fill="var(--color-primary)" class="channel-text">PPC</text>
    <text x="60" y="5" font-family="sans-serif" font-size="10" fill="var(--color-secondary)" class="channel-text">CONTENT</text>
    <text x="120" y="5" font-family="sans-serif" font-size="10" fill="var(--color-accent)" class="channel-text">VIDEO</text>
  </g>
  
  <!-- Target/Audience Icon -->
  <g class="target" transform="translate(100, 100)">
    <!-- Target Rings -->
    <circle cx="0" cy="0" r="40" fill="none" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.2" class="target-ring ring-1" />
    <circle cx="0" cy="0" r="30" fill="none" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.3" class="target-ring ring-2" />
    <circle cx="0" cy="0" r="20" fill="none" stroke="var(--color-primary)" stroke-width="1.5" class="target-ring ring-3" />
    <circle cx="0" cy="0" r="10" fill="var(--color-primary)" fill-opacity="0.3" class="target-ring ring-4" />
    <circle cx="0" cy="0" r="3" fill="var(--color-primary)" class="target-bullseye" />
    
    <!-- Target Crosshair -->
    <line x1="-45" y1="0" x2="45" y2="0" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.3" class="target-line" />
    <line x1="0" y1="-45" x2="0" y2="45" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.3" class="target-line" />
  </g>
  
  <!-- Megaphone Icon -->
  <g class="megaphone" transform="translate(400, 100)">
    <path d="M-30,10 L-20,0 L-20,-20 L-30,-30 L-30,10 Z" fill="var(--color-accent)" class="megaphone-handle" />
    <path d="M-20,-20 L10,-40 L10,20 L-20,0 Z" fill="var(--color-secondary)" class="megaphone-body" />
    <path d="M10,-40 L40,-50 L40,30 L10,20 Z" fill="none" stroke="var(--color-secondary)" stroke-width="1.5" stroke-dasharray="2,2" class="megaphone-sound" />
    
    <!-- Sound Waves -->
    <path d="M15,-20 Q25,-15 15,0 M20,-25 Q35,-15 20,5 M25,-30 Q45,-15 25,10" stroke="var(--color-accent)" stroke-width="1.5" fill="none" class="sound-waves" />
  </g>
</svg>
</div>

<style>
  .svg-container {
    position: relative;
    width: 100%;
    padding: 10px;
    overflow: hidden;
  }
  
  .marketing-illustration {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .bg, .pattern {
    opacity: 0.7;
  }
  
  /* Animations for decorative elements */
  .shape {
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }
  
  .shape-1 {
    animation-delay: 0.1s;
    transform-origin: center;
    animation: fadeIn 0.8s ease forwards, float 6s ease-in-out infinite;
  }
  
  .shape-2 {
    animation-delay: 0.2s;
    animation: fadeIn 0.8s ease forwards, float 8s ease-in-out infinite reverse;
  }
  
  .shape-3 {
    animation-delay: 0.3s;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 2s ease forwards;
  }
  
  /* Marketing elements animations */
  .marketing-elements {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpFadeIn 1s ease forwards 0.4s;
  }
  
  .funnel-outline {
    opacity: 0;
    stroke-dasharray: 500;
    stroke-dashoffset: 500;
    animation: dashDraw 1.5s ease forwards 0.6s;
  }
  
  .funnel-section {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
  }
  
  .section-1 { animation-delay: 0.7s; }
  .section-2 { animation-delay: 0.9s; }
  .section-3 { animation-delay: 1.1s; }
  .section-4 { animation-delay: 1.3s; }
  
  .funnel-text {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards;
  }
  
  .funnel-text:nth-of-type(1) { animation-delay: 0.8s; }
  .funnel-text:nth-of-type(2) { animation-delay: 1.0s; }
  .funnel-text:nth-of-type(3) { animation-delay: 1.2s; }
  .funnel-text:nth-of-type(4) { animation-delay: 1.4s; }
  
  /* Channel icons animations */
  .channel {
    opacity: 0;
    transform: scale(0);
    animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
  
  .channel-1 { animation-delay: 1.5s; }
  .channel-2 { animation-delay: 1.6s; }
  .channel-3 { animation-delay: 1.7s; }
  
  .channel-icon {
    opacity: 0;
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: dashDraw 0.8s ease forwards;
  }
  
  .channel-1 .channel-icon { animation-delay: 1.55s; }
  .channel-2 .channel-icon { animation-delay: 1.65s; }
  .channel-3 .channel-icon { animation-delay: 1.75s; }
  
  /* Analytics animations */
  .chart-bg {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 1.8s;
  }
  
  .chart-axis {
    opacity: 0;
    stroke-dasharray: 100;
    stroke-dashoffset: 100;
    animation: dashDraw 0.5s ease forwards 1.9s;
  }
  
  .chart-bar {
    opacity: 0;
    transform-origin: bottom;
    transform: scaleY(0);
    animation: growBar 0.7s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
  
  .bar-1 { animation-delay: 2.0s; }
  .bar-2 { animation-delay: 2.1s; }
  .bar-3 { animation-delay: 2.2s; }
  .bar-4 { animation-delay: 2.3s; }
  
  .chart-label {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards 2.4s;
  }
  
  /* Target animations */
  .target-ring {
    opacity: 0;
    stroke-dasharray: 300;
    stroke-dashoffset: 300;
    animation: dashDraw 1s ease forwards, pulse 4s ease-in-out infinite;
    transform-origin: center;
  }
  
  .ring-1 { animation-delay: 2.5s, 3s; }
  .ring-2 { animation-delay: 2.6s, 3.1s; }
  .ring-3 { animation-delay: 2.7s, 3.2s; }
  
  .ring-4 {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 2.8s, pulse 4s ease-in-out infinite 3.3s;
  }
  
  .target-bullseye {
    opacity: 0;
    animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 2.9s;
  }
  
  .target-line {
    opacity: 0;
    stroke-dasharray: 100;
    stroke-dashoffset: 100;
    animation: dashDraw 0.5s ease forwards;
  }
  
  .target-line:nth-of-type(5) { animation-delay: 3.0s; }
  .target-line:nth-of-type(6) { animation-delay: 3.1s; }
  
  /* Megaphone animations */
  .megaphone-handle, .megaphone-body {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
  }
  
  .megaphone-handle { animation-delay: 3.2s; }
  .megaphone-body { animation-delay: 3.3s; }
  
  .megaphone-sound {
    opacity: 0;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 1s ease forwards 3.4s;
  }
  
  .sound-waves {
    opacity: 0;
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: dashDraw 0.8s ease forwards 3.5s, fadeInOut 3s ease-in-out infinite 4s;
  }
  
  /* Marketing text animations */
  .text-container {
    opacity: 0;
    transform: scaleX(0);
    transform-origin: center;
    animation: scaleX 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 3.6s;
  }
  
  .channel-text {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards;
  }
  
  .channel-text:nth-of-type(1) { animation-delay: 3.7s; }
  .channel-text:nth-of-type(2) { animation-delay: 3.75s; }
  .channel-text:nth-of-type(3) { animation-delay: 3.8s; }
  .channel-text:nth-of-type(4) { animation-delay: 3.85s; }
  .channel-text:nth-of-type(5) { animation-delay: 3.9s; }
  .channel-text:nth-of-type(6) { animation-delay: 3.95s; }
  
  /* Animation Keyframes */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUpFadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes popIn {
    from { opacity: 0; transform: scale(0); }
    to { opacity: 1; transform: scale(1); }
  }
  
  @keyframes dashDraw {
    to { stroke-dashoffset: 0; }
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  @keyframes growBar {
    from { opacity: 0; transform: scaleY(0); }
    to { opacity: 1; transform: scaleY(1); }
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.05); opacity: 0.8; }
  }
  
  @keyframes fadeInOut {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }
  
  @keyframes scaleX {
    from { opacity: 0; transform: scaleX(0); }
    to { opacity: 1; transform: scaleX(1); }
  }
  
  /* Dark mode adjustments */
  :global(.dark) .marketing-illustration {
    --shadow-color: rgba(0, 0, 0, 0.5);
  }
</style>