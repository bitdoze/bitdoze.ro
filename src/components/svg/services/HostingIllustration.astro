<div class="svg-container">
<svg width="100%" height="100%" viewBox="0 0 500 400" xmlns="http://www.w3.org/2000/svg" class="hosting-illustration">
  <!-- Background and decorative elements -->
  <defs>
    <linearGradient id="hosting-bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--color-primary)" stop-opacity="0.05" />
      <stop offset="100%" stop-color="var(--color-secondary)" stop-opacity="0.05" />
    </linearGradient>

    <filter id="hosting-shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="4" stdDeviation="6" flood-opacity="0.2" />
    </filter>
    
    <linearGradient id="server-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="var(--color-primary)" stop-opacity="0.7" />
      <stop offset="100%" stop-color="var(--color-secondary)" stop-opacity="0.7" />
    </linearGradient>
  </defs>
  
  <!-- Background for the illustration -->
  <rect width="500" height="400" rx="16" fill="url(#hosting-bg-gradient)" class="bg" />
  
  <!-- Abstract decorative shapes -->
  <circle cx="80" cy="60" r="40" fill="var(--color-primary)" fill-opacity="0.1" class="shape shape-1" />
  <circle cx="420" cy="340" r="50" fill="var(--color-secondary)" fill-opacity="0.1" class="shape shape-2" />
  <path d="M380,80 Q420,40 460,80 T540,80" stroke="var(--color-accent)" stroke-width="2" fill="none" class="shape shape-3" />
  
  <!-- Central Server Rack Group -->
  <g class="server-rack" transform="translate(250, 200)" filter="url(#hosting-shadow)">
    <!-- Rack Cabinet -->
    <rect x="-80" y="-120" width="160" height="240" rx="5" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="2" stroke-opacity="0.3" class="rack-cabinet" />
    
    <!-- Rack Rails -->
    <rect x="-75" y="-120" width="5" height="240" fill="var(--color-text)" fill-opacity="0.2" class="rack-rail" />
    <rect x="70" y="-120" width="5" height="240" fill="var(--color-text)" fill-opacity="0.2" class="rack-rail" />
    
    <!-- Server Units -->
    <g class="server-unit unit-1" transform="translate(0, -100)">
      <rect x="-70" y="-10" width="140" height="20" rx="2" fill="var(--color-primary)" fill-opacity="0.1" class="server-face" />
      <rect x="-65" y="-5" width="10" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.2" class="server-button" />
      <circle cx="-45" cy="0" r="3" fill="var(--color-accent)" class="server-led led-1" />
      <circle cx="-35" cy="0" r="3" fill="var(--color-primary)" class="server-led led-2" />
      <rect x="-20" y="-5" width="80" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.1" class="server-display" />
    </g>
    
    <g class="server-unit unit-2" transform="translate(0, -70)">
      <rect x="-70" y="-10" width="140" height="20" rx="2" fill="var(--color-secondary)" fill-opacity="0.1" class="server-face" />
      <rect x="-65" y="-5" width="10" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.2" class="server-button" />
      <circle cx="-45" cy="0" r="3" fill="var(--color-accent)" class="server-led led-1" />
      <circle cx="-35" cy="0" r="3" fill="var(--color-primary)" class="server-led led-2" />
      <rect x="-20" y="-5" width="80" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.1" class="server-display" />
    </g>
    
    <g class="server-unit unit-3" transform="translate(0, -40)">
      <rect x="-70" y="-10" width="140" height="20" rx="2" fill="var(--color-accent)" fill-opacity="0.1" class="server-face" />
      <rect x="-65" y="-5" width="10" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.2" class="server-button" />
      <circle cx="-45" cy="0" r="3" fill="var(--color-accent)" class="server-led led-1" />
      <circle cx="-35" cy="0" r="3" fill="var(--color-primary)" class="server-led led-2" />
      <rect x="-20" y="-5" width="80" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.1" class="server-display" />
    </g>
    
    <g class="server-unit unit-4" transform="translate(0, -10)">
      <rect x="-70" y="-10" width="140" height="20" rx="2" fill="var(--color-primary)" fill-opacity="0.1" class="server-face" />
      <rect x="-65" y="-5" width="10" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.2" class="server-button" />
      <circle cx="-45" cy="0" r="3" fill="var(--color-accent)" class="server-led led-1" />
      <circle cx="-35" cy="0" r="3" fill="var(--color-primary)" class="server-led led-2" />
      <rect x="-20" y="-5" width="80" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.1" class="server-display" />
    </g>
    
    <!-- Storage Array -->
    <g class="storage-array" transform="translate(0, 30)">
      <rect x="-70" y="-20" width="140" height="40" rx="2" fill="var(--color-secondary)" fill-opacity="0.1" class="storage-face" />
      <rect x="-65" y="-15" width="130" height="30" rx="1" fill="var(--color-text)" fill-opacity="0.05" class="drive-bay" />
      
      <g class="drive drive-1" transform="translate(-55, 0)">
        <rect x="-8" y="-10" width="16" height="20" rx="1" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="0.5" stroke-opacity="0.2" />
        <circle cx="0" cy="5" r="2" fill="var(--color-accent)" />
      </g>
      
      <g class="drive drive-2" transform="translate(-35, 0)">
        <rect x="-8" y="-10" width="16" height="20" rx="1" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="0.5" stroke-opacity="0.2" />
        <circle cx="0" cy="5" r="2" fill="var(--color-accent)" />
      </g>
      
      <g class="drive drive-3" transform="translate(-15, 0)">
        <rect x="-8" y="-10" width="16" height="20" rx="1" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="0.5" stroke-opacity="0.2" />
        <circle cx="0" cy="5" r="2" fill="var(--color-primary)" />
      </g>
      
      <g class="drive drive-4" transform="translate(5, 0)">
        <rect x="-8" y="-10" width="16" height="20" rx="1" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="0.5" stroke-opacity="0.2" />
        <circle cx="0" cy="5" r="2" fill="var(--color-accent)" />
      </g>
      
      <g class="drive drive-5" transform="translate(25, 0)">
        <rect x="-8" y="-10" width="16" height="20" rx="1" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="0.5" stroke-opacity="0.2" />
        <circle cx="0" cy="5" r="2" fill="var(--color-accent)" />
      </g>
      
      <g class="drive drive-6" transform="translate(45, 0)">
        <rect x="-8" y="-10" width="16" height="20" rx="1" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="0.5" stroke-opacity="0.2" />
        <circle cx="0" cy="5" r="2" fill="var(--color-primary)" />
      </g>
      
      <g class="drive drive-7" transform="translate(65, 0)">
        <rect x="-8" y="-10" width="16" height="20" rx="1" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="0.5" stroke-opacity="0.2" />
        <circle cx="0" cy="5" r="2" fill="var(--color-accent)" />
      </g>
    </g>
    
    <!-- Network Switch -->
    <g class="network-switch" transform="translate(0, 70)">
      <rect x="-70" y="-10" width="140" height="20" rx="2" fill="var(--color-accent)" fill-opacity="0.1" class="switch-face" />
      <rect x="-65" y="-5" width="10" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.2" class="switch-button" />
      
      <!-- Network Ports -->
      <g class="network-ports">
        <rect x="-50" y="-6" width="6" height="4" rx="1" fill="var(--color-primary)" fill-opacity="0.8" class="port port-1" />
        <rect x="-40" y="-6" width="6" height="4" rx="1" fill="var(--color-secondary)" fill-opacity="0.8" class="port port-2" />
        <rect x="-30" y="-6" width="6" height="4" rx="1" fill="var(--color-primary)" fill-opacity="0.8" class="port port-3" />
        <rect x="-20" y="-6" width="6" height="4" rx="1" fill="var(--color-secondary)" fill-opacity="0.8" class="port port-4" />
        <rect x="-10" y="-6" width="6" height="4" rx="1" fill="var(--color-primary)" fill-opacity="0.8" class="port port-5" />
        <rect x="0" y="-6" width="6" height="4" rx="1" fill="var(--color-secondary)" fill-opacity="0.8" class="port port-6" />
        <rect x="10" y="-6" width="6" height="4" rx="1" fill="var(--color-primary)" fill-opacity="0.8" class="port port-7" />
        <rect x="20" y="-6" width="6" height="4" rx="1" fill="var(--color-secondary)" fill-opacity="0.8" class="port port-8" />
        <rect x="30" y="-6" width="6" height="4" rx="1" fill="var(--color-primary)" fill-opacity="0.8" class="port port-9" />
        <rect x="40" y="-6" width="6" height="4" rx="1" fill="var(--color-secondary)" fill-opacity="0.8" class="port port-10" />
        <rect x="50" y="-6" width="6" height="4" rx="1" fill="var(--color-primary)" fill-opacity="0.8" class="port port-11" />
        <rect x="60" y="-6" width="6" height="4" rx="1" fill="var(--color-secondary)" fill-opacity="0.8" class="port port-12" />
      </g>
      
      <!-- Status LEDs -->
      <rect x="-50" y="2" width="100" height="2" rx="1" fill="var(--color-text)" fill-opacity="0.1" class="status-leds" />
      <circle cx="-40" cy="3" r="1" fill="var(--color-accent)" class="led blink" />
      <circle cx="-30" cy="3" r="1" fill="var(--color-primary)" class="led blink-slow" />
      <circle cx="-20" cy="3" r="1" fill="var(--color-accent)" class="led blink" />
      <circle cx="-10" cy="3" r="1" fill="var(--color-primary)" class="led blink-slow" />
      <circle cx="0" cy="3" r="1" fill="var(--color-accent)" class="led blink" />
      <circle cx="10" cy="3" r="1" fill="var(--color-primary)" class="led blink-slow" />
      <circle cx="20" cy="3" r="1" fill="var(--color-accent)" class="led blink" />
      <circle cx="30" cy="3" r="1" fill="var(--color-primary)" class="led blink-slow" />
      <circle cx="40" cy="3" r="1" fill="var(--color-accent)" class="led blink" />
    </g>
    
    <!-- UPS at the bottom -->
    <g class="ups" transform="translate(0, 100)">
      <rect x="-70" y="-10" width="140" height="20" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="ups-face" />
      <rect x="-65" y="-5" width="10" height="10" rx="1" fill="var(--color-accent)" fill-opacity="0.5" class="ups-button" />
      <rect x="-50" y="-8" width="40" height="16" rx="1" fill="var(--color-text)" fill-opacity="0.05" class="ups-display" />
      <rect x="0" y="-8" width="65" height="16" rx="1" fill="var(--color-text)" fill-opacity="0.1" class="ups-status" />
      
      <!-- Battery Level Indicators -->
      <rect x="5" y="-5" width="10" height="10" rx="1" fill="var(--color-primary)" fill-opacity="0.7" class="battery-level level-1" />
      <rect x="20" y="-5" width="10" height="10" rx="1" fill="var(--color-primary)" fill-opacity="0.7" class="battery-level level-2" />
      <rect x="35" y="-5" width="10" height="10" rx="1" fill="var(--color-primary)" fill-opacity="0.7" class="battery-level level-3" />
      <rect x="50" y="-5" width="10" height="10" rx="1" fill="var(--color-text)" fill-opacity="0.2" class="battery-level level-4" />
    </g>
  </g>
  
  <!-- Cloud/SaaS Elements Top Right -->
  <g class="cloud-elements" transform="translate(400, 100)">
    <circle cx="0" cy="0" r="40" fill="var(--color-background)" stroke="url(#server-gradient)" stroke-width="2" class="cloud-circle" />
    <path d="M-15,10 C-15,-5 0,-15 15,-5 C30,-15 30,10 15,20 C0,30 -15,25 -15,10 Z" fill="none" stroke="var(--color-primary)" stroke-width="1.5" class="cloud-shape" />
    <path d="M-5,5 L5,5 M0,0 L0,10 M-5,15 L5,15" stroke="var(--color-primary)" stroke-width="1.5" class="cloud-data" />
  </g>
  
  <!-- Database/Storage Bottom Left -->
  <g class="database" transform="translate(100, 320)">
    <circle cx="0" cy="0" r="35" fill="var(--color-background)" stroke="url(#server-gradient)" stroke-width="2" class="db-circle" />
    <path d="M-15,-15 L15,-15 L15,-5 L-15,-5 Z M-15,-5 C-15,-5 -20,0 -15,5 C-10,10 10,10 15,5 C20,0 15,-5 15,-5 M-15,5 L15,5 L15,15 L-15,15 Z" fill="none" stroke="var(--color-secondary)" stroke-width="1.5" class="db-shape" />
    <path d="M-5,-12 L5,-12 M-10,-8 L10,-8 M-5,8 L5,8 M-10,12 L10,12" stroke="var(--color-secondary)" stroke-width="1" class="db-lines" />
  </g>
  
  <!-- Security/Protection Bottom Right -->
  <g class="security" transform="translate(400, 320)">
    <circle cx="0" cy="0" r="35" fill="var(--color-background)" stroke="url(#server-gradient)" stroke-width="2" class="security-circle" />
    <path d="M0,-20 L-15,0 L0,20 L15,0 Z" fill="none" stroke="var(--color-accent)" stroke-width="2" class="security-shield" />
    <path d="M-5,0 L-2,5 L8,-5" stroke="var(--color-accent)" stroke-width="2" fill="none" class="security-check" />
  </g>
  
  <!-- Connection Lines between elements -->
  <g class="connection-lines">
    <path d="M250,80 C250,80 350,80 400,100" stroke="var(--color-primary)" stroke-width="1.5" stroke-dasharray="5,5" fill="none" class="connection-line line-1" />
    <path d="M250,320 C250,320 350,320 400,320" stroke="var(--color-secondary)" stroke-width="1.5" stroke-dasharray="5,5" fill="none" class="connection-line line-2" />
    <path d="M250,320 C250,320 150,320 100,320" stroke="var(--color-accent)" stroke-width="1.5" stroke-dasharray="5,5" fill="none" class="connection-line line-3" />
    <path d="M400,100 C400,150 400,250 400,320" stroke="var(--color-primary)" stroke-width="1.5" stroke-dasharray="5,5" fill="none" class="connection-line line-4" />
  </g>
  
  <!-- Data Transfer Pulses -->
  <g class="data-pulses">
    <circle cx="300" cy="80" r="4" fill="var(--color-primary)" class="data-pulse pulse-1" />
    <circle cx="300" cy="320" r="4" fill="var(--color-secondary)" class="data-pulse pulse-2" />
    <circle cx="175" cy="320" r="4" fill="var(--color-accent)" class="data-pulse pulse-3" />
    <circle cx="400" cy="200" r="4" fill="var(--color-primary)" class="data-pulse pulse-4" />
  </g>
  
  <!-- Uptime Badge -->
  <g class="uptime-badge" transform="translate(100, 100)">
    <rect x="-40" y="-15" width="80" height="30" rx="15" fill="var(--color-background)" stroke="var(--color-accent)" stroke-width="2" class="badge" />
    <text x="0" y="5" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-accent)" font-weight="bold" class="badge-text">99.9% UPTIME</text>
  </g>
</svg>
</div>

<style>
  .svg-container {
    position: relative;
    width: 100%;
    padding: 10px;
    overflow: hidden;
  }
  
  .hosting-illustration {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .bg {
    opacity: 0.7;
  }
  
  /* Animations for decorative elements */
  .shape {
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }
  
  .shape-1 {
    animation-delay: 0.1s;
    transform-origin: center;
    animation: fadeIn 0.8s ease forwards, float 6s ease-in-out infinite;
  }
  
  .shape-2 {
    animation-delay: 0.2s;
    animation: fadeIn 0.8s ease forwards, float 8s ease-in-out infinite reverse;
  }
  
  .shape-3 {
    animation-delay: 0.3s;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 2s ease forwards;
  }
  
  /* Server rack animations */
  .server-rack {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpFadeIn 1s ease forwards 0.4s;
  }
  
  .rack-cabinet {
    opacity: 0;
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: dashDraw 2s ease forwards 0.6s;
  }
  
  .rack-rail {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 0.8s;
  }
  
  /* Server unit animations */
  .server-unit {
    opacity: 0;
    transform: translateX(-10px);
    animation: slideInRight 0.5s ease forwards;
  }
  
  .unit-1 { animation-delay: 1.0s; }
  .unit-2 { animation-delay: 1.1s; }
  .unit-3 { animation-delay: 1.2s; }
  .unit-4 { animation-delay: 1.3s; }
  
  .server-led {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards, blink 2s infinite;
  }
  
  .led-1 { animation-delay: 1.4s, 2s; }
  .led-2 { animation-delay: 1.5s, 2.5s; }
  
  /* Storage array animations */
  .storage-array {
    opacity: 0;
    transform: translateX(-10px);
    animation: slideInRight 0.5s ease forwards 1.6s;
  }
  
  .drive {
    opacity: 0;
    animation: popIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
  
  .drive-1 { animation-delay: 1.7s; }
  .drive-2 { animation-delay: 1.75s; }
  .drive-3 { animation-delay: 1.8s; }
  .drive-4 { animation-delay: 1.85s; }
  .drive-5 { animation-delay: 1.9s; }
  .drive-6 { animation-delay: 1.95s; }
  .drive-7 { animation-delay: 2.0s; }
  
  /* Network switch animations */
  .network-switch {
    opacity: 0;
    transform: translateX(-10px);
    animation: slideInRight 0.5s ease forwards 2.1s;
  }
  
  .port {
    opacity: 0;
    animation: fadeIn 0.2s ease forwards;
  }
  
  .port-1 { animation-delay: 2.2s; }
  .port-2 { animation-delay: 2.22s; }
  .port-3 { animation-delay: 2.24s; }
  .port-4 { animation-delay: 2.26s; }
  .port-5 { animation-delay: 2.28s; }
  .port-6 { animation-delay: 2.3s; }
  .port-7 { animation-delay: 2.32s; }
  .port-8 { animation-delay: 2.34s; }
  .port-9 { animation-delay: 2.36s; }
  .port-10 { animation-delay: 2.38s; }
  .port-11 { animation-delay: 2.4s; }
  .port-12 { animation-delay: 2.42s; }
  
  .led.blink {
    animation: blinkFast 1s infinite;
    animation-delay: 2.5s;
  }
  
  .led.blink-slow {
    animation: blinkSlow 3s infinite;
    animation-delay: 2.5s;
  }
  
  /* UPS animations */
  .ups {
    opacity: 0;
    transform: translateX(-10px);
    animation: slideInRight 0.5s ease forwards 2.6s;
  }
  
  .battery-level {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards;
  }
  
  .level-1 { animation-delay: 2.7s; }
  .level-2 { animation-delay: 2.8s; }
  .level-3 { animation-delay: 2.9s; }
  .level-4 { animation-delay: 3.0s; }
  
  /* Cloud elements animations */
  .cloud-circle {
    opacity: 0;
    transform: scale(0);
    animation: popIn 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 3.1s;
  }
  
  .cloud-shape {
    opacity: 0;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 1s ease forwards 3.2s;
  }
  
  .cloud-data {
    opacity: 0;
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: dashDraw 0.5s ease forwards 3.3s, pulse 2s ease-in-out infinite 3.5s;
  }
  
  /* Database animations */
  .db-circle {
    opacity: 0;
    transform: scale(0);
    animation: popIn 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 3.4s;
  }
  
  .db-shape {
    opacity: 0;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 1s ease forwards 3.5s;
  }
  
  .db-lines {
    opacity: 0;
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: dashDraw 0.5s ease forwards 3.6s;
  }
  
  /* Security shield animations */
  .security-circle {
    opacity: 0;
    transform: scale(0);
    animation: popIn 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 3.7s;
  }
  
  .security-shield {
    opacity: 0;
    stroke-dasharray: 150;
    stroke-dashoffset: 150;
    animation: dashDraw 1s ease forwards 3.8s;
  }
  
  .security-check {
    opacity: 0;
    stroke-dasharray: 20;
    stroke-dashoffset: 20;
    animation: dashDraw 0.5s ease forwards 3.9s;
  }
  
  /* Connection lines */
  .connection-line {
    opacity: 0;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 1.5s ease forwards;
  }
  
  .line-1 { animation-delay: 4.0s; }
  .line-2 { animation-delay: 4.1s; }
  .line-3 { animation-delay: 4.2s; }
  .line-4 { animation-delay: 4.3s; }
  
  /* Data pulses */
  .data-pulse {
    opacity: 0;
    animation: moveAlongPath 3s infinite linear;
  }
  
  .pulse-1 { animation-delay: 4.4s; animation-duration: 2s; }
  .pulse-2 { animation-delay: 4.5s; animation-duration: 2.5s; }
  .pulse-3 { animation-delay: 4.6s; animation-duration: 2s; }
  .pulse-4 { animation-delay: 4.7s; animation-duration: 3s; }
  
  /* Uptime badge */
  .uptime-badge {
    opacity: 0;
    transform: scale(0) rotate(-10deg);
    animation: popInRotate 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 4.8s;
  }
  
  .badge-text {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards 5.0s;
  }
  
  /* Animation Keyframes */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUpFadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes slideInRight {
