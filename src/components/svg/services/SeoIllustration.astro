<div class="svg-container">
<svg width="100%" height="100%" viewBox="0 0 500 400" xmlns="http://www.w3.org/2000/svg" class="seo-illustration">
  <!-- Defs for patterns, gradients and filters -->
  <defs>
    <linearGradient id="seo-bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--color-primary)" stop-opacity="0.05" />
      <stop offset="100%" stop-color="var(--color-secondary)" stop-opacity="0.05" />
    </linearGradient>
    
    <filter id="seo-shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="4" stdDeviation="6" flood-opacity="0.2" />
    </filter>
    
    <pattern id="grid-dots" width="20" height="20" patternUnits="userSpaceOnUse">
      <circle cx="10" cy="10" r="1" fill="var(--color-text)" fill-opacity="0.1" />
    </pattern>
    
    <linearGradient id="graph-gradient" x1="0%" y1="100%" x2="0%" y2="0%">
      <stop offset="0%" stop-color="var(--color-primary)" stop-opacity="0.6" />
      <stop offset="100%" stop-color="var(--color-accent)" stop-opacity="0.6" />
    </linearGradient>
  </defs>
  
  <!-- Background with pattern -->
  <rect width="500" height="400" rx="16" fill="url(#seo-bg-gradient)" class="bg" />
  <rect width="500" height="400" rx="16" fill="url(#grid-dots)" class="pattern" />
  
  <!-- Abstract decoration elements -->
  <circle cx="70" cy="60" r="30" fill="var(--color-primary)" fill-opacity="0.1" class="decoration decoration-1" />
  <circle cx="430" cy="340" r="40" fill="var(--color-accent)" fill-opacity="0.1" class="decoration decoration-2" />
  
  <!-- Main SERP (Search Engine Results Page) Group -->
  <g class="serp-container" filter="url(#seo-shadow)" transform="translate(100, 80)">
    <!-- Browser Frame -->
    <rect x="0" y="0" width="300" height="240" rx="6" fill="var(--color-background)" class="browser-frame" />
    
    <!-- Search Bar -->
    <rect x="0" y="0" width="300" height="40" rx="6 6 0 0" fill="var(--color-text-lighter)" fill-opacity="0.1" class="search-bar" />
    <rect x="50" y="10" width="200" height="20" rx="10" fill="var(--color-background)" stroke="var(--color-text-lighter)" stroke-width="1" stroke-opacity="0.3" class="search-input" />
    <circle cx="20" cy="20" r="8" fill="var(--color-primary)" class="browser-control" />
    <circle cx="40" cy="20" r="8" fill="var(--color-accent)" class="browser-control" />
    <circle cx="280" cy="20" r="8" fill="var(--color-primary)" class="search-button" />
    <path d="M280,17 L280,23 M277,20 L283,20" stroke="white" stroke-width="1.5" />
    
    <!-- Search Results -->
    <g class="search-results">
      <!-- Top Result -->
      <rect x="20" y="60" width="260" height="40" rx="4" fill="var(--color-primary)" fill-opacity="0.1" class="result result-1" />
      <rect x="30" y="70" width="150" height="8" rx="2" fill="var(--color-text)" fill-opacity="0.6" class="result-title" />
      <rect x="30" y="83" width="240" height="6" rx="2" fill="var(--color-text)" fill-opacity="0.3" class="result-description" />
      
      <!-- Second Result -->
      <rect x="20" y="110" width="260" height="40" rx="4" fill="var(--color-text)" fill-opacity="0.05" class="result result-2" />
      <rect x="30" y="120" width="120" height="8" rx="2" fill="var(--color-text)" fill-opacity="0.6" class="result-title" />
      <rect x="30" y="133" width="240" height="6" rx="2" fill="var(--color-text)" fill-opacity="0.3" class="result-description" />
      
      <!-- Third Result -->
      <rect x="20" y="160" width="260" height="40" rx="4" fill="var(--color-text)" fill-opacity="0.05" class="result result-3" />
      <rect x="30" y="170" width="130" height="8" rx="2" fill="var(--color-text)" fill-opacity="0.6" class="result-title" />
      <rect x="30" y="183" width="240" height="6" rx="2" fill="var(--color-text)" fill-opacity="0.3" class="result-description" />
      
      <!-- Pagination -->
      <g class="pagination">
        <circle cx="140" cy="220" r="8" fill="var(--color-primary)" class="page-number" />
        <circle cx="160" cy="220" r="8" fill="var(--color-text)" fill-opacity="0.1" class="page-number" />
        <circle cx="180" cy="220" r="8" fill="var(--color-text)" fill-opacity="0.1" class="page-number" />
        <text x="140" y="224" text-anchor="middle" font-family="sans-serif" font-size="10" fill="white">1</text>
        <text x="160" y="224" text-anchor="middle" font-family="sans-serif" font-size="10" fill="var(--color-text)">2</text>
        <text x="180" y="224" text-anchor="middle" font-family="sans-serif" font-size="10" fill="var(--color-text)">3</text>
      </g>
    </g>
    
    <!-- First Position Badge -->
    <g class="first-position-badge" transform="translate(280, 50)">
      <circle cx="0" cy="0" r="15" fill="var(--color-accent)" />
      <text x="0" y="4" text-anchor="middle" font-family="sans-serif" font-size="12" font-weight="bold" fill="white">#1</text>
    </g>
  </g>
  
  <!-- SEO Analytics Elements -->
  <g class="analytics-section" transform="translate(60, 240)">
    <!-- Analytics Chart -->
    <rect x="0" y="0" width="120" height="80" rx="4" fill="var(--color-background)" stroke="var(--color-text-lighter)" stroke-width="1" stroke-opacity="0.3" class="chart-container" />
    <text x="60" y="15" text-anchor="middle" font-family="sans-serif" font-size="10" fill="var(--color-text)">TRAFFIC GROWTH</text>
    
    <!-- Chart Lines -->
    <line x1="10" y1="70" x2="110" y2="70" stroke="var(--color-text-lighter)" stroke-width="1" stroke-opacity="0.3" class="chart-axis" />
    <line x1="10" y1="25" x2="10" y2="70" stroke="var(--color-text-lighter)" stroke-width="1" stroke-opacity="0.3" class="chart-axis" />
    
    <!-- Chart Data -->
    <polyline points="10,60 30,55 50,45 70,35 90,25 110,20" stroke="var(--color-primary)" stroke-width="2" fill="none" class="chart-line" />
    <path d="M10,60 L30,55 L50,45 L70,35 L90,25 L110,20 L110,70 L10,70 Z" fill="url(#graph-gradient)" fill-opacity="0.3" class="chart-area" />
    
    <!-- Data Points -->
    <circle cx="10" cy="60" r="3" fill="var(--color-primary)" class="data-point" />
    <circle cx="30" cy="55" r="3" fill="var(--color-primary)" class="data-point" />
    <circle cx="50" cy="45" r="3" fill="var(--color-primary)" class="data-point" />
    <circle cx="70" cy="35" r="3" fill="var(--color-primary)" class="data-point" />
    <circle cx="90" cy="25" r="3" fill="var(--color-primary)" class="data-point" />
    <circle cx="110" cy="20" r="3" fill="var(--color-primary)" class="data-point" />
  </g>
  
  <!-- Keywords Tag Cloud -->
  <g class="keyword-cloud" transform="translate(330, 240)">
    <rect x="0" y="0" width="120" height="80" rx="4" fill="var(--color-background)" stroke="var(--color-text-lighter)" stroke-width="1" stroke-opacity="0.3" class="cloud-container" />
    <text x="60" y="15" text-anchor="middle" font-family="sans-serif" font-size="10" fill="var(--color-text)">KEYWORDS</text>
    
    <text x="30" y="35" text-anchor="middle" font-family="sans-serif" font-size="8" fill="var(--color-text)" fill-opacity="0.7" class="keyword">design</text>
    <text x="70" y="40" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-primary)" class="keyword">SEO</text>
    <text x="100" y="45" text-anchor="middle" font-family="sans-serif" font-size="7" fill="var(--color-text)" fill-opacity="0.7" class="keyword">website</text>
    <text x="40" y="50" text-anchor="middle" font-family="sans-serif" font-size="10" fill="var(--color-accent)" class="keyword">marketing</text>
    <text x="80" y="55" text-anchor="middle" font-family="sans-serif" font-size="9" fill="var(--color-text)" fill-opacity="0.7" class="keyword">content</text>
    <text x="50" y="65" text-anchor="middle" font-family="sans-serif" font-size="11" fill="var(--color-secondary)" class="keyword">ranking</text>
  </g>
  
  <!-- Magnifying Glass with Rankings -->
  <g class="magnifying-glass" transform="translate(430, 120)">
    <circle cx="0" cy="0" r="30" fill="white" stroke="var(--color-primary)" stroke-width="3" fill-opacity="0.2" class="glass" />
    <line x1="20" y1="20" x2="40" y2="40" stroke="var(--color-primary)" stroke-width="3" class="handle" />
    <text x="0" y="5" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-primary)" class="page-rank">PAGE</text>
    <text x="0" y="-5" text-anchor="middle" font-family="sans-serif" font-size="12" fill="var(--color-primary)" class="page-rank">RANK</text>
  </g>
</svg>
</div>

<style>
  .svg-container {
    position: relative;
    width: 100%;
    padding: 10px;
    overflow: hidden;
  }
  
  .seo-illustration {
    width: 100%;
    height: auto;
    display: block;
  }
  
  /* Background and decoration animations */
  .decoration {
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }
  
  .decoration-1 {
    animation-delay: 0.1s;
    animation: fadeIn 0.8s ease forwards, float 6s ease-in-out infinite;
  }
  
  .decoration-2 {
    animation-delay: 0.2s;
    animation: fadeIn 0.8s ease forwards, float 8s ease-in-out infinite reverse;
  }
  
  /* SERP container animations */
  .serp-container {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpFadeIn 1s ease forwards 0.4s;
  }
  
  .browser-frame {
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: drawStroke 1.5s ease forwards 0.6s;
  }
  
  .browser-control {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards;
  }
  
  .browser-control:nth-of-type(1) { animation-delay: 0.7s; }
  .browser-control:nth-of-type(2) { animation-delay: 0.8s; }
  
  .search-bar, .search-input, .search-button {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 0.9s;
  }
  
  /* Search results animations */
  .result {
    opacity: 0;
    transform: translateX(-10px);
    animation: slideInRight 0.5s ease forwards;
  }
  
  .result-1 { animation-delay: 1s; }
  .result-2 { animation-delay: 1.1s; }
  .result-3 { animation-delay: 1.2s; }
  
  .result-title, .result-description {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
  }
  
  .result-title { animation-delay: 1.3s; }
  .result-description { animation-delay: 1.4s; }
  
  /* Pagination animation */
  .page-number {
    opacity: 0;
    animation: popIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
  
  .page-number:nth-of-type(1) { animation-delay: 1.5s; }
  .page-number:nth-of-type(2) { animation-delay: 1.6s; }
  .page-number:nth-of-type(3) { animation-delay: 1.7s; }
  
  .pagination text {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards 1.8s;
  }
  
  /* First position badge animation */
  .first-position-badge {
    opacity: 0;
    transform: scale(0) rotate(-20deg);
    transform-origin: center;
    animation: popInRotate 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 1.9s;
  }
  
  /* Analytics section animations */
  .chart-container, .cloud-container {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpFadeIn 0.5s ease forwards 2s;
  }
  
  .chart-axis {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 2.1s;
  }
  
  .chart-line {
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: drawStroke 1.5s ease forwards 2.2s;
  }
  
  .chart-area {
    opacity: 0;
    animation: fadeIn 1s ease forwards 2.4s;
  }
  
  .data-point {
    opacity: 0;
    animation: popIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
  
  .data-point:nth-of-type(1) { animation-delay: 2.6s; }
  .data-point:nth-of-type(2) { animation-delay: 2.7s; }
  .data-point:nth-of-type(3) { animation-delay: 2.8s; }
  .data-point:nth-of-type(4) { animation-delay: 2.9s; }
  .data-point:nth-of-type(5) { animation-delay: 3.0s; }
  .data-point:nth-of-type(6) { animation-delay: 3.1s; }
  
  /* Keyword cloud animations */
  .keyword {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
  }
  
  .keyword:nth-of-type(1) { animation-delay: 2.2s; }
  .keyword:nth-of-type(2) { animation-delay: 2.3s; }
  .keyword:nth-of-type(3) { animation-delay: 2.4s; }
  .keyword:nth-of-type(4) { animation-delay: 2.5s; }
  .keyword:nth-of-type(5) { animation-delay: 2.6s; }
  .keyword:nth-of-type(6) { animation-delay: 2.7s; }
  
  /* Magnifying glass animation */
  .magnifying-glass {
    opacity: 0;
    transform: translateY(20px) rotate(10deg);
    animation: magGlassIn 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 2.8s;
  }
  
  .glass {
    animation: pulse 3s ease-in-out infinite 3s;
  }
  
  .handle {
    stroke-dasharray: 30;
    stroke-dashoffset: 30;
    animation: drawStroke 0.5s ease forwards 3s;
  }
  
  .page-rank {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 3.1s;
  }
  
  /* Animation keyframes */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUpFadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes slideInRight {
    from { opacity: 0; transform: translateX(-10px); }
    to { opacity: 1; transform: translateX(0); }
  }
  
  @keyframes popIn {
    from { opacity: 0; transform: scale(0); }
    to { opacity: 1; transform: scale(1); }
  }
  
  @keyframes popInRotate {
    from { opacity: 0; transform: scale(0) rotate(-20deg); }
    to { opacity: 1; transform: scale(1) rotate(0deg); }
  }
  
  @keyframes drawStroke {
    to { stroke-dashoffset: 0; }
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.2; }
    50% { transform: scale(1.05); opacity: 0.3; }
  }
  
  @keyframes magGlassIn {
    from { opacity: 0; transform: translateY(20px) rotate(10deg); }
    to { opacity: 1; transform: translateY(0) rotate(0deg); }
  }
  
  /* Dark mode adaptations */
  :global(.dark) .seo-illustration {
    --glass-color: rgba(255, 255, 255, 0.1);
  }
</style>