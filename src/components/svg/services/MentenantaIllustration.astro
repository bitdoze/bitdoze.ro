<div class="svg-container">
<svg width="100%" height="100%" viewBox="0 0 500 400" xmlns="http://www.w3.org/2000/svg" class="mentenanta-illustration">
  <!-- Background and decorative elements -->
  <defs>
    <linearGradient id="maintenance-bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="var(--color-primary)" stop-opacity="0.05" />
      <stop offset="100%" stop-color="var(--color-secondary)" stop-opacity="0.05" />
    </linearGradient>
    
    <filter id="maintenance-shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="4" stdDeviation="6" flood-opacity="0.2" />
    </filter>
    
    <pattern id="grid-pattern" width="20" height="20" patternUnits="userSpaceOnUse">
      <path d="M 20 0 L 0 0 0 20" fill="none" stroke="var(--color-text)" stroke-opacity="0.05" stroke-width="0.5" />
    </pattern>
  </defs>
  
  <!-- Background for the illustration -->
  <rect width="500" height="400" rx="16" fill="url(#maintenance-bg-gradient)" class="bg" />
  <rect width="500" height="400" rx="16" fill="url(#grid-pattern)" class="grid" />
  
  <!-- Abstract decorative shapes -->
  <circle cx="70" cy="60" r="30" fill="var(--color-primary)" fill-opacity="0.1" class="shape shape-1" />
  <circle cx="430" cy="340" r="40" fill="var(--color-secondary)" fill-opacity="0.1" class="shape shape-2" />
  <path d="M380,80 Q420,40 460,80 T540,80" stroke="var(--color-accent)" stroke-width="2" fill="none" class="shape shape-3" />
  
  <!-- Main Website Maintenance Central Group -->
  <g class="maintenance-central" transform="translate(250, 200)" filter="url(#maintenance-shadow)">
    <!-- Website Frame -->
    <rect x="-100" y="-80" width="200" height="160" rx="8" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="1.5" stroke-opacity="0.3" class="website-frame" />
    
    <!-- Website Header -->
    <rect x="-100" y="-80" width="200" height="30" rx="8 8 0 0" fill="var(--color-text)" fill-opacity="0.05" class="website-header" />
    <circle cx="-85" cy="-65" r="5" fill="var(--color-primary)" fill-opacity="0.7" class="control-dot" />
    <circle cx="-70" cy="-65" r="5" fill="var(--color-secondary)" fill-opacity="0.7" class="control-dot" />
    <circle cx="-55" cy="-65" r="5" fill="var(--color-accent)" fill-opacity="0.7" class="control-dot" />
    <rect x="-30" y="-72" width="100" height="14" rx="3" fill="var(--color-text)" fill-opacity="0.1" class="address-bar" />
    
    <!-- Website Content -->
    <g class="website-content">
      <!-- Navigation -->
      <rect x="-90" y="-40" width="180" height="20" rx="3" fill="var(--color-primary)" fill-opacity="0.1" class="nav-bar" />
      <rect x="-85" y="-37" width="20" height="14" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="nav-item" />
      <rect x="-55" y="-37" width="20" height="14" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="nav-item" />
      <rect x="-25" y="-37" width="20" height="14" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="nav-item" />
      <rect x="5" y="-37" width="20" height="14" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="nav-item" />
      <rect x="35" y="-37" width="20" height="14" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="nav-item" />
      <rect x="65" y="-37" width="20" height="14" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="nav-item" />
      
      <!-- Content Blocks -->
      <rect x="-90" y="-10" width="70" height="80" rx="3" fill="var(--color-secondary)" fill-opacity="0.1" class="content-block block-1" />
      <rect x="-10" y="-10" width="90" height="40" rx="3" fill="var(--color-text)" fill-opacity="0.05" class="content-block block-2" />
      <rect x="-10" y="40" width="90" height="30" rx="3" fill="var(--color-text)" fill-opacity="0.05" class="content-block block-3" />
    </g>
    
    <!-- Gear Animation in top of site -->
    <g class="gear-overlay" transform="translate(0, -30)">
      <circle cx="0" cy="0" r="25" fill="var(--color-background)" fill-opacity="0.7" class="gear-bg" />
      <path d="M0,-25 L0,-35 M25,0 L35,0 M0,25 L0,35 M-25,0 L-35,0 M18,-18 L25,-25 M18,18 L25,25 M-18,18 L-25,25 M-18,-18 L-25,-25" stroke="var(--color-primary)" stroke-width="2" class="gear-teeth" />
      <circle cx="0" cy="0" r="18" fill="none" stroke="var(--color-primary)" stroke-width="2" class="gear-body" />
      <circle cx="0" cy="0" r="5" fill="var(--color-primary)" class="gear-center" />
    </g>
  </g>
  
  <!-- Maintenance Tools -->
  <g class="maintenance-tools">
    <!-- Code/Update Tool -->
    <g class="tool tool-code" transform="translate(100, 100)">
      <rect x="-30" y="-30" width="60" height="60" rx="5" fill="var(--color-background)" stroke="var(--color-primary)" stroke-width="1.5" class="tool-bg" />
      <rect x="-20" y="-20" width="40" height="8" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="code-line" />
      <rect x="-20" y="-8" width="30" height="8" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="code-line" />
      <rect x="-20" y="4" width="35" height="8" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="code-line" />
      <rect x="-20" y="16" width="25" height="8" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="code-line" />
      <path d="M-15,-16 L-10,-16 M-15,-4 L-5,-4 M-15,8 L-2,8 M-15,20 L-7,20" stroke="var(--color-primary)" stroke-width="1.5" class="code-highlight" />
    </g>
    
    <!-- Security/Shield Tool -->
    <g class="tool tool-security" transform="translate(400, 100)">
      <rect x="-30" y="-30" width="60" height="60" rx="5" fill="var(--color-background)" stroke="var(--color-secondary)" stroke-width="1.5" class="tool-bg" />
      <path d="M0,-20 L-15,0 L0,20 L15,0 Z" fill="none" stroke="var(--color-secondary)" stroke-width="2" class="shield-outline" />
      <path d="M-5,0 L-2,3 L5,-5" stroke="var(--color-secondary)" stroke-width="2" fill="none" class="shield-check" />
    </g>
    
    <!-- Speed/Performance Tool -->
    <g class="tool tool-speed" transform="translate(100, 320)">
      <rect x="-30" y="-30" width="60" height="60" rx="5" fill="var(--color-background)" stroke="var(--color-accent)" stroke-width="1.5" class="tool-bg" />
      <circle cx="0" cy="0" r="20" fill="none" stroke="var(--color-accent)" stroke-width="2" stroke-dasharray="3,3" class="speed-dial" />
      <path d="M0,0 L10,-15" stroke="var(--color-accent)" stroke-width="2" class="speed-needle" />
      <circle cx="0" cy="0" r="3" fill="var(--color-accent)" class="speed-center" />
    </g>
    
    <!-- Backup/Cloud Tool -->
    <g class="tool tool-backup" transform="translate(400, 320)">
      <rect x="-30" y="-30" width="60" height="60" rx="5" fill="var(--color-background)" stroke="var(--color-primary)" stroke-width="1.5" class="tool-bg" />
      <path d="M-15,5 C-15,-10 15,-10 15,5 C25,5 25,20 15,20 L-15,20 C-25,20 -25,5 -15,5 Z" fill="none" stroke="var(--color-primary)" stroke-width="2" class="cloud-outline" />
      <path d="M0,15 L0,0 M-6,6 L0,0 L6,6" stroke="var(--color-primary)" stroke-width="2" class="upload-arrow" />
    </g>
  </g>
  
  <!-- Connecting Lines -->
  <g class="connecting-lines">
    <path d="M130,100 Q190,150 250,170" stroke="var(--color-primary)" stroke-width="1.5" stroke-dasharray="5,3" fill="none" class="line line-1" />
    <path d="M370,100 Q310,150 250,170" stroke="var(--color-secondary)" stroke-width="1.5" stroke-dasharray="5,3" fill="none" class="line line-2" />
    <path d="M130,290 Q190,240 250,230" stroke="var(--color-accent)" stroke-width="1.5" stroke-dasharray="5,3" fill="none" class="line line-3" />
    <path d="M370,290 Q310,240 250,230" stroke="var(--color-primary)" stroke-width="1.5" stroke-dasharray="5,3" fill="none" class="line line-4" />
  </g>
  
  <!-- Pulse Effects for Data Flow -->
  <g class="data-flow">
    <circle cx="160" cy="140" r="4" fill="var(--color-primary)" class="data-pulse pulse-1" />
    <circle cx="340" cy="140" r="4" fill="var(--color-secondary)" class="data-pulse pulse-2" />
    <circle cx="160" cy="260" r="4" fill="var(--color-accent)" class="data-pulse pulse-3" />
    <circle cx="340" cy="260" r="4" fill="var(--color-primary)" class="data-pulse pulse-4" />
  </g>
</svg>
</div>

<style>
  .svg-container {
    position: relative;
    width: 100%;
    padding: 10px;
    overflow: hidden;
  }
  
  .mentenanta-illustration {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .bg, .grid {
    opacity: 0.7;
  }
  
  /* Animations for decorative elements */
  .shape {
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }
  
  .shape-1 {
    animation-delay: 0.1s;
    transform-origin: center;
    animation: fadeIn 0.8s ease forwards, float 6s ease-in-out infinite;
  }
  
  .shape-2 {
    animation-delay: 0.2s;
    animation: fadeIn 0.8s ease forwards, float 8s ease-in-out infinite reverse;
  }
  
  .shape-3 {
    animation-delay: 0.3s;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 2s ease forwards;
  }
  
  /* Website frame animations */
  .maintenance-central {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpFadeIn 1s ease forwards 0.4s;
  }
  
  .website-frame {
    opacity: 0;
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: dashDraw 2s ease forwards 0.7s;
  }
  
  .website-header {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 0.9s;
  }
  
  .control-dot {
    opacity: 0;
    animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
  
  .control-dot:nth-of-type(1) { animation-delay: 1.0s; }
  .control-dot:nth-of-type(2) { animation-delay: 1.1s; }
  .control-dot:nth-of-type(3) { animation-delay: 1.2s; }
  
  .address-bar {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 1.3s;
  }
  
  /* Website content animations */
  .nav-bar {
    opacity: 0;
    transform: scaleX(0);
    transform-origin: left;
    animation: scaleX 0.6s ease forwards 1.4s;
  }
  
  .nav-item {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards;
  }
  
  .nav-item:nth-of-type(1) { animation-delay: 1.5s; }
  .nav-item:nth-of-type(2) { animation-delay: 1.55s; }
  .nav-item:nth-of-type(3) { animation-delay: 1.6s; }
  .nav-item:nth-of-type(4) { animation-delay: 1.65s; }
  .nav-item:nth-of-type(5) { animation-delay: 1.7s; }
  .nav-item:nth-of-type(6) { animation-delay: 1.75s; }
  
  .content-block {
    opacity: 0;
    transform: translateY(10px);
    animation: slideUpFadeIn 0.5s ease forwards;
  }
  
  .block-1 { animation-delay: 1.8s; }
  .block-2 { animation-delay: 1.9s; }
  .block-3 { animation-delay: 2.0s; }
  
  /* Gear animation */
  .gear-bg {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 2.1s;
  }
  
  .gear-body, .gear-teeth {
    opacity: 0;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 1s ease forwards, rotate 20s linear infinite;
    transform-origin: center;
  }
  
  .gear-body { animation-delay: 2.2s, 3s; }
  .gear-teeth { animation-delay: 2.3s, 3s; }
  
  .gear-center {
    opacity: 0;
    animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 2.4s;
  }
  
  /* Tool animations */
  .tool {
    opacity: 0;
    transform: scale(0);
    animation: popIn 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
  
  .tool-code { animation-delay: 2.5s; }
  .tool-security { animation-delay: 2.7s; }
  .tool-speed { animation-delay: 2.9s; }
  .tool-backup { animation-delay: 3.1s; }
  
  .code-line {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards;
  }
  
  .code-line:nth-of-type(1) { animation-delay: 2.6s; }
  .code-line:nth-of-type(2) { animation-delay: 2.65s; }
  .code-line:nth-of-type(3) { animation-delay: 2.7s; }
  .code-line:nth-of-type(4) { animation-delay: 2.75s; }
  
  .code-highlight {
    opacity: 0;
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: dashDraw 0.5s ease forwards 2.8s, blink 2s ease-in-out infinite 3.3s;
  }
  
  .shield-outline {
    opacity: 0;
    stroke-dasharray: 100;
    stroke-dashoffset: 100;
    animation: dashDraw 0.8s ease forwards 2.8s;
  }
  
  .shield-check {
    opacity: 0;
    stroke-dasharray: 20;
    stroke-dashoffset: 20;
    animation: dashDraw 0.3s ease forwards 3.0s;
  }
  
  .speed-dial {
    opacity: 0;
    stroke-dasharray: 150;
    stroke-dashoffset: 150;
    animation: dashDraw 0.8s ease forwards 3.0s;
  }
  
  .speed-needle {
    opacity: 0;
    transform-origin: bottom center;
    animation: fadeIn 0.3s ease forwards 3.1s, rotateNeedle 3s ease-in-out infinite 3.5s;
  }
  
  .speed-center {
    opacity: 0;
    animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards 3.2s;
  }
  
  .cloud-outline {
    opacity: 0;
    stroke-dasharray: 150;
    stroke-dashoffset: 150;
    animation: dashDraw 0.8s ease forwards 3.2s;
  }
  
  .upload-arrow {
    opacity: 0;
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: dashDraw 0.5s ease forwards 3.3s, moveUpDown 2s ease-in-out infinite 3.8s;
    transform-origin: center;
  }
  
  /* Connecting lines animations */
  .line {
    opacity: 0;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 1.5s ease forwards;
  }
  
  .line-1 { animation-delay: 3.4s; }
  .line-2 { animation-delay: 3.5s; }
  .line-3 { animation-delay: 3.6s; }
  .line-4 { animation-delay: 3.7s; }
  
  /* Data pulse animations */
  .data-pulse {
    opacity: 0;
    animation: movePulse 5s infinite linear, pulseGlow 2s infinite ease-in-out;
  }
  
  .pulse-1 { animation-delay: 3.8s, 3.8s; }
  .pulse-2 { animation-delay: 4.0s, 4.0s; }
  .pulse-3 { animation-delay: 4.2s, 4.2s; }
  .pulse-4 { animation-delay: 4.4s, 4.4s; }
  
  /* Animation Keyframes */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUpFadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes popIn {
    from { opacity: 0; transform: scale(0); }
    to { opacity: 1; transform: scale(1); }
  }
  
  @keyframes dashDraw {
    to { stroke-dashoffset: 0; }
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes scaleX {
    from { opacity: 0; transform: scaleX(0); }
    to { opacity: 1; transform: scaleX(1); }
  }
  
  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }
  
  @keyframes rotateNeedle {
    0%, 100% { transform: rotate(0deg); }
    50% { transform: rotate(70deg); }
  }
  
  @keyframes moveUpDown {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }
  
  @keyframes movePulse {
    0% { opacity: 0; }
    10% { opacity: 1; }
    50% { opacity: 1; }
    90% { opacity: 0; }
    100% { opacity: 0; }
  }
  
  @keyframes pulseGlow {
    0%, 100% { r: 4; opacity: 0.8; }
    50% { r: 6; opacity: 1; }
  }
  
  /* Dark mode adjustments */
  :global(.dark) .mentenanta-illustration {
    --shadow-color: rgba(0, 0, 0, 0.5);
  }
</style>