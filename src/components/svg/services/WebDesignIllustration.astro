    <rect x="100" y="80" width="300" height="240" rx="8" fill="var(--color-background)" />
    
    <!-- Browser Toolbar -->
    <rect x="100" y="80" width="300" height="30" rx="8 8 0 0" fill="var(--color-text-lighter)" fill-opacity="0.1" class="toolbar" />
    
    <!-- Browser Window Controls -->
    <circle cx="115" cy="95" r="6" fill="#f87171" class="control control-1" />
    <circle cx="135" cy="95" r="6" fill="#fbbf24" class="control control-2" />
    <circle cx="155" cy="95" r="6" fill="#34d399" class="control control-3" />
    
    <!-- Address Bar -->
    <rect x="180" y="87" width="180" height="16" rx="3" fill="var(--color-background)" class="address-bar" />
    
    <!-- Page Content -->
    <g class="content">
      <!-- Header Section -->
      <rect x="120" y="130" width="260" height="40" rx="4" fill="var(--color-primary)" fill-opacity="0.1" class="header" />
      
      <!-- Navigation Items -->
      <circle cx="140" cy="150" r="10" fill="var(--color-primary)" fill-opacity="0.3" class="nav-item nav-item-1" />
      <rect x="160" y="145" width="40" height="10" rx="2" fill="var(--color-text)" fill-opacity="0.2" class="nav-item nav-item-2" />
      <rect x="210" y="145" width="40" height="10" rx="2" fill="var(--color-text)" fill-opacity="0.2" class="nav-item nav-item-3" />
      <rect x="260" y="145" width="40" height="10" rx="2" fill="var(--color-text)" fill-opacity="0.2" class="nav-item nav-item-4" />
      <rect x="310" y="145" width="40" height="10" rx="2" fill="var(--color-text)" fill-opacity="0.2" class="nav-item nav-item-5" />
      
      <!-- Hero Section -->
      <rect x="120" y="180" width="260" height="60" rx="4" fill="var(--color-secondary)" fill-opacity="0.1" class="hero" />
      <rect x="140" y="195" width="120" height="15" rx="2" fill="var(--color-text)" fill-opacity="0.2" class="hero-text hero-text-1" />
      <rect x="140" y="215" width="200" height="10" rx="2" fill="var(--color-text)" fill-opacity="0.1" class="hero-text hero-text-2" />
      
      <!-- Content Grid -->
      <rect x="120" y="250" width="80" height="60" rx="4" fill="var(--color-accent)" fill-opacity="0.1" class="grid-item grid-item-1" />
      <rect x="210" y="250" width="80" height="60" rx="4" fill="var(--color-accent)" fill-opacity="0.1" class="grid-item grid-item-2" />
      <rect x="300" y="250" width="80" height="60" rx="4" fill="var(--color-accent)" fill-opacity="0.1" class="grid-item grid-item-3" />
    </g>
  </g>
  
  <!-- Design Elements -->
  <g class="design-elements">
    <!-- Color Palette -->
    <circle cx="50" cy="200" r="15" fill="var(--color-primary)" class="palette palette-1" />
    <circle cx="50" cy="240" r="15" fill="var(--color-secondary)" class="palette palette-2" />
    <circle cx="50" cy="280" r="15" fill="var(--color-accent)" class="palette palette-3" />
    <circle cx="50" cy="320" r="15" fill="var(--color-text)" fill-opacity="0.8" class="palette palette-4" />
    
    <!-- Design Ruler -->
    <line x1="70" y1="360" x2="430" y2="360" stroke="var(--color-text)" stroke-width="2" stroke-opacity="0.3" class="ruler" />
    <line x1="70" y1="355" x2="70" y2="365" stroke="var(--color-text)" stroke-width="2" stroke-opacity="0.3" />
    <line x1="170" y1="355" x2="170" y2="365" stroke="var(--color-text)" stroke-width="2" stroke-opacity="0.3" />
    <line x1="270" y1="355" x2="270" y2="365" stroke="var(--color-text)" stroke-width="2" stroke-opacity="0.3" />
    <line x1="370" y1="355" x2="370" y2="365" stroke="var(--color-text)" stroke-width="2" stroke-opacity="0.3" />
    <line x1="430" y1="355" x2="430" y2="365" stroke="var(--color-text)" stroke-width="2" stroke-opacity="0.3" />
    
    <!-- Cursor -->
    <g class="cursor" transform="translate(340, 210)">
      <path d="M0,0 L12,12 L7,12 L10,20 L6,22 L3,14 L0,14 Z" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="1.5" />
    </g>
  </g>
  
  <!-- Code Elements -->
  <g class="code-elements" transform="translate(430, 130)">
    <rect x="0" y="0" width="60" height="80" rx="4" fill="var(--color-background)" stroke="var(--color-text)" stroke-width="1" stroke-opacity="0.3" class="code-block" />
    <line x1="10" y1="15" x2="50" y2="15" stroke="var(--color-primary)" stroke-width="2" stroke-opacity="0.8" class="code-line code-line-1" />
    <line x1="10" y1="30" x2="40" y2="30" stroke="var(--color-secondary)" stroke-width="2" stroke-opacity="0.8" class="code-line code-line-2" />
    <line x1="10" y1="45" x2="45" y2="45" stroke="var(--color-accent)" stroke-width="2" stroke-opacity="0.8" class="code-line code-line-3" />
    <line x1="10" y1="60" x2="35" y2="60" stroke="var(--color-text)" stroke-width="2" stroke-opacity="0.5" class="code-line code-line-4" />
  </g>
</svg>

<style>
  .web-design-illustration {
    width: 100%;
    height: auto;
    overflow: visible;
  }
  
  .bg {
    opacity: 0.7;
  }
  
  /* Animations for decorative elements */
  .shape {
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }
  
  .shape-1 {
    animation-delay: 0.1s;
    transform-origin: center;
    animation: fadeIn 0.8s ease forwards, float 6s ease-in-out infinite;
  }
  
  .shape-2 {
    animation-delay: 0.2s;
    animation: fadeIn 0.8s ease forwards, float 8s ease-in-out infinite reverse;
  }
  
  .shape-3 {
    animation-delay: 0.3s;
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: dashDraw 2s ease forwards;
  }
  
  /* Browser animations */
  .browser {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpFadeIn 1s ease forwards 0.4s;
  }
  
  .toolbar, .address-bar {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards 0.7s;
  }
  
  .control {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards;
  }
  
  .control-1 { animation-delay: 0.8s; }
  .control-2 { animation-delay: 0.9s; }
  .control-3 { animation-delay: 1s; }
  
  /* Page content animations */
  .header, .nav-item, .hero, .hero-text, .grid-item {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
  }
  
  .header { animation-delay: 1.1s; }
  .nav-item-1 { animation-delay: 1.2s; }
  .nav-item-2 { animation-delay: 1.25s; }
  .nav-item-3 { animation-delay: 1.3s; }
  .nav-item-4 { animation-delay: 1.35s; }
  .nav-item-5 { animation-delay: 1.4s; }
  
  .hero { animation-delay: 1.5s; }
  .hero-text-1 { animation-delay: 1.6s; }
  .hero-text-2 { animation-delay: 1.7s; }
  
  .grid-item-1 { animation-delay: 1.8s; }
  .grid-item-2 { animation-delay: 1.9s; }
  .grid-item-3 { animation-delay: 2s; }
  
  /* Design elements animations */
  .palette {
    opacity: 0;
    transform: scale(0);
    animation: popIn 0.4s ease forwards;
  }
  
  .palette-1 { animation-delay: 1.2s; }
  .palette-2 { animation-delay: 1.3s; }
  .palette-3 { animation-delay: 1.4s; }
  .palette-4 { animation-delay: 1.5s; }
  
  .ruler {
    stroke-dasharray: 360;
    stroke-dashoffset: 360;
    animation: dashDraw 1s ease forwards 1.6s;
  }
  
  /* Cursor animation */
  .cursor {
    opacity: 0;
    animation: fadeIn 0.3s ease forwards 2.1s, moveCursor 4s ease-in-out infinite 2.1s;
  }
  
  /* Code block animation */
  .code-block {
    opacity: 0;
    transform: translateX(20px);
    animation: slideInRight 0.6s ease forwards 1.1s;
  }
  
  .code-line {
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: dashDraw 0.6s ease forwards;
  }
  
  .code-line-1 { animation-delay: 1.3s; }
  .code-line-2 { animation-delay: 1.5s; }
  .code-line-3 { animation-delay: 1.7s; }
  .code-line-4 { animation-delay: 1.9s; }
  
  /* Animation Keyframes */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUpFadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes popIn {
    from { opacity: 0; transform: scale(0); }
    to { opacity: 1; transform: scale(1); }
  }
  
  @keyframes dashDraw {
    to { stroke-dashoffset: 0; }
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  @keyframes slideInRight {
    from { opacity: 0; transform: translateX(20px); }
    to { opacity: 1; transform: translateX(0); }
  }
  
  @keyframes moveCursor {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(-30px, 20px); }
    50% { transform: translate(-60px, -10px); }
    75% { transform: translate(-20px, -30px); }
  }
  
  /* Dark mode adjustments */
  :global(.dark) .web-design-illustration {
    --shadow-color: rgba(0, 0, 0, 0.5);
  }
</style>