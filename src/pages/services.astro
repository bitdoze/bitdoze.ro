---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { services } from "../config/services";
import ServiceCardV2 from "../components/ServiceCardV2.astro";
import { servicesPageConfig } from "../config/pages";
import { companyConfig } from "../config/company";
import CTA from "../components/CTA.astro";

// Extract sections from config
const heroSection = servicesPageConfig.sections.find(
  (section) => section.type === "aboutHero"
);
const servicesListSection = servicesPageConfig.sections.find(
  (section) => section.type === "servicesList"
);
const processSection = servicesPageConfig.sections.find(
  (section) => section.type === "process"
);
const faqSection = servicesPageConfig.sections.find(
  (section) => section.type === "faq"
);
const ctaSection = servicesPageConfig.sections.find(
  (section) => section.type === "cta"
);
---

<Layout
  title={servicesPageConfig.title}
  description={servicesPageConfig.description}
  ogType={servicesPageConfig.ogType}
  structuredData={{
    type: "service",
    data: {
      serviceType: "Servicii Profesionale",
      provider: {
        "@type": "Organization",
        name: companyConfig.name,
      },
    },
  }}
>
  <!-- Hero Section -->
  {
    heroSection && (
      <section class="section-padding" style="background: linear-gradient(to bottom, rgba(var(--color-primary-rgb), 0.1), var(--color-background));">
        <div class="container text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            {heroSection.title}
          </h1>
          <p
            class="text-xl max-w-3xl mx-auto"
            style="color: var(--color-text-light);"
          >
            {heroSection.subtitle}
          </p>
        </div>
      </section>
    )
  }

  <!-- Services -->
  {
    servicesListSection && (
      <section class="section-padding services-list-section">
        <div class="container">
          <div class="section-header">
            <h2 class="section-title">
              <span class="text-gradient-brand">Servicii Complete</span>
              <span class="title-text"> pentru Succesul Tău Digital</span>
            </h2>
            <p class="section-subtitle">{servicesListSection.subtitle}</p>
          </div>

          <div class="services-grid">
            {services.map((service, index) => (
              <ServiceCardV2
                title={service.title}
                description={service.description}
                icon={service.icon}
                link={service.link}
                index={index}
                ctaText={servicesListSection.cta?.text || "Află mai multe"}
              />
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Our Process -->
  {
    processSection && (
      <section
        class="section-padding"
        style="background-color: var(--color-background-alt);"
      >
        <div class="container">
          <div class="text-center mb-16">
            <h2 class="text-3xl font-bold mb-4">{processSection.title}</h2>
            <p
              style="color: var(--color-text-light);"
              class="max-w-2xl mx-auto"
            >
              {processSection.subtitle}
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {processSection.steps.map((step) => (
              <div
                class="p-6 flex flex-col items-center text-center"
                style="background-color: var(--color-background); border-radius: var(--radius-lg); box-shadow: var(--shadow-sm); border: 1px solid var(--color-text-lighter);"
              >
                <div
                  class="w-12 h-12 rounded-full text-white flex items-center justify-center mb-4 text-xl font-bold"
                  style="background-color: var(--color-primary);"
                >
                  {step.number}
                </div>
                {step.icon && (
                  <Icon
                    name={step.icon}
                    class="h-10 w-10 mb-4"
                    style="color: var(--color-primary);"
                  />
                )}
                <h3 class="text-xl font-bold mb-2">{step.title}</h3>
                <p style="color: var(--color-text-light);">
                  {step.description}
                </p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- FAQ Section -->
  {
    faqSection && (
      <section class="section-padding">
        <div class="container">
          <div class="text-center mb-16">
            <h2 class="text-3xl font-bold mb-4">{faqSection.title}</h2>
            <p
              style="color: var(--color-text-light);"
              class="max-w-2xl mx-auto"
            >
              {faqSection.subtitle}
            </p>
          </div>

          <div
            class="max-w-3xl mx-auto divide-y"
            style="border-color: var(--color-text-lighter);"
          >
            {faqSection.questions.map((item) => (
              <div class="py-6">
                <h3 class="text-lg font-semibold mb-2">{item.question}</h3>
                <p style="color: var(--color-text-light);">{item.answer}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  {
    ctaSection && (
      <CTA
        title={ctaSection.title}
        subtitle={ctaSection.subtitle}
        ctaText={ctaSection.ctaPrimary.text}
        ctaLink={ctaSection.ctaPrimary.link}
        secondaryText={ctaSection.ctaSecondary?.text}
        secondaryLink={ctaSection.ctaSecondary?.link}
        trustedBy={ctaSection.trustedBy}
      />
    )
  }
</Layout>

<style>
  /* Services List Section */
  .services-list-section {
    background: linear-gradient(
      180deg,
      var(--color-background) 0%,
      var(--color-background-alt) 50%,
      var(--color-background) 100%
    );
    position: relative;
    overflow: hidden;
  }

  .services-list-section::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 30% 70%, rgba(var(--color-primary-rgb), 0.03) 0%, transparent 50%);
    animation: float 25s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
    33% {
      transform: translate(30px, -30px) rotate(120deg);
    }
    66% {
      transform: translate(-20px, 20px) rotate(240deg);
    }
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    line-height: 1.3;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  /* Using global .text-gradient-brand */

  @keyframes gradientShift {
    0%,
    100% {
      filter: hue-rotate(0deg);
    }
    50% {
      filter: hue-rotate(30deg);
    }
  }

  .title-text {
    color: var(--color-text);
  }

  :global(.dark) .title-text {
    color: var(--color-dark-text);
  }

  .section-subtitle {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto;
  }

  :global(.dark) .section-subtitle {
    color: var(--color-dark-text-light);
  }

  /* Services Grid */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
    position: relative;
    z-index: 1;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1200px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .section-header {
      margin-bottom: 3rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
